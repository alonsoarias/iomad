<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="MoodleCore">
  <rule ref="moodle"/>
  <rule ref="moodle-extra"/>
  <exclude-pattern type="relative">^svelte/</exclude-pattern>
  <rule ref="PSR12.Classes.OpeningBraceSpace.Found">
    <severity>0</severity>
  </rule>
  <rule ref="Universal.OOStructures.AlphabeticExtendsImplements.ImplementsWrongOrder">
    <severity>0</severity>
  </rule>
  <rule ref="moodle.Commenting.DocblockDescription">
    <severity>0</severity>
  </rule>
  <rule ref="moodle.Commenting.FileExpectedTags">
    <severity>0</severity>
  </rule>
  <rule ref="moodle.Commenting.MissingDocblock">
    <severity>0</severity>
  </rule>
  <rule ref="moodle.Commenting.Package">
    <severity>0</severity>
  </rule>
  <rule ref="moodle.Commenting.VariableComment">
    <severity>0</severity>
  </rule>
  <rule ref="moodle.Files.BoilerplateComment">
    <severity>0</severity>
  </rule>
</ruleset>
