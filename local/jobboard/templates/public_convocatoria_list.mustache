{{!
    @template local_jobboard/public_convocatoria_list

    Public convocatoria list template.

    Context variables:
    * convocatorias - Array of convocatoria objects
    * hasconvocatorias - Boolean
    * count - Total count
    * pagination - Pagination HTML
}}
<div class="jb-public-convocatoria-list">
    <h3 class="jb-mb-4">{{#str}}activeconvocatorias, local_jobboard{{/str}}</h3>

    {{#hasconvocatorias}}
    <div class="jb-row">
        {{#convocatorias}}
        <div class="jb-col-lg-6 jb-mb-3">
            {{> local_jobboard/convocatoria_card }}
        </div>
        {{/convocatorias}}
    </div>
    {{{pagination}}}
    {{/hasconvocatorias}}
    {{^hasconvocatorias}}
    <div class="jb-text-center jb-py-5">
        <i class="fa fa-calendar-o fa-4x jb-text-muted jb-mb-3" aria-hidden="true"></i>
        <p class="jb-text-muted">{{#str}}noactiveconvocatorias, local_jobboard{{/str}}</p>
    </div>
    {{/hasconvocatorias}}
</div>
