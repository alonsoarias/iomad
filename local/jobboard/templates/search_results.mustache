{{!
    @template local_jobboard/search_results

    Search results page template.

    Context variables:
    * query - Search query
    * results - Search results array
    * hasresults - Boolean
    * count - Results count displayed
    * totalcount - Total results count
    * pagination - Pagination HTML
    * searchagainurl - URL to search again
    * noresultsmessage - Message when no results
}}
<div class="jb-search-results">
    <div class="jb-mb-4">
        <h3>
            {{#str}}searchresultsfor, local_jobboard{{/str}}: <span class="jb-text-primary">"{{query}}"</span>
        </h3>
        {{#hasresults}}
        <p class="jb-text-muted">
            {{#str}}found, local_jobboard{{/str}} <strong>{{totalcount}}</strong> {{#str}}results, local_jobboard{{/str}}
        </p>
        {{/hasresults}}
    </div>

    {{#hasresults}}
    <div class="jb-search-results-list">
        {{#results}}
        {{> local_jobboard/vacancy_card }}
        {{/results}}
    </div>
    {{{pagination}}}
    {{/hasresults}}

    {{^hasresults}}
    <div class="jb-text-center jb-py-5">
        <div class="jb-empty-state">
            <i class="fa fa-search fa-4x jb-text-muted jb-mb-3" aria-hidden="true"></i>
            <h4>{{noresultsmessage}}</h4>
            <p class="jb-text-muted jb-mb-4">{{#str}}trydifferentsearch, local_jobboard{{/str}}</p>
            <a href="{{searchagainurl}}" class="jb-btn jb-btn-primary">
                <i class="fa fa-search jb-mr-1" aria-hidden="true"></i>
                {{#str}}searchagain, local_jobboard{{/str}}
            </a>
        </div>
    </div>
    {{/hasresults}}
</div>
