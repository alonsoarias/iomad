{{!
    @template local_jobboard/admin_bulk_operations

    Bulk operations page template.

    Context variables:
    * entitytype - Entity type
    * entities - Array of entities
    * hasentities - Boolean
    * count - Total count
    * actions - Available actions
    * hasactions - Boolean
    * submiturl - Form submit URL
}}
<div class="jb-admin-bulk-operations">
    <h4 class="jb-mb-4">{{#str}}bulkoperations, local_jobboard{{/str}}</h4>

    {{#hasentities}}
    <form method="post" action="{{submiturl}}">
        <input type="hidden" name="sesskey" value="{{sesskey}}">
        <input type="hidden" name="entitytype" value="{{entitytype}}">

        <div class="jb-card">
            <div class="jb-card-header jb-d-flex jb-justify-content-between jb-align-items-center">
                <div class="jb-form-check">
                    <input type="checkbox" class="jb-form-check-input" id="select-all-bulk">
                    <label class="jb-form-check-label" for="select-all-bulk">{{#str}}selectall, local_jobboard{{/str}}</label>
                </div>
                {{#hasactions}}
                <div class="jb-d-flex jb-align-items-center">
                    <select name="action" class="jb-form-control jb-custom-select jb-mr-2">
                        <option value="">{{#str}}selectaction, local_jobboard{{/str}}</option>
                        {{#actions}}
                        <option value="{{value}}">{{label}}</option>
                        {{/actions}}
                    </select>
                    <button type="submit" class="jb-btn jb-btn-primary">{{#str}}apply, local_jobboard{{/str}}</button>
                </div>
                {{/hasactions}}
            </div>
            <div class="jb-card-body jb-p-0">
                <div class="jb-list-group jb-list-group-flush">
                    {{#entities}}
                    <label class="jb-list-group-item jb-d-flex jb-align-items-center">
                        <input type="checkbox" name="ids[]" value="{{id}}" class="jb-form-check-input jb-mr-3">
                        <div>
                            <strong>{{title}}</strong>
                            {{#subtitle}}<br><small class="jb-text-muted">{{subtitle}}</small>{{/subtitle}}
                        </div>
                    </label>
                    {{/entities}}
                </div>
            </div>
            <div class="jb-card-footer">
                <span class="jb-text-muted">{{count}} {{#str}}items, local_jobboard{{/str}}</span>
            </div>
        </div>
    </form>
    {{/hasentities}}
    {{^hasentities}}
    {{> local_jobboard/components/empty_state }}
    {{/hasentities}}
</div>
