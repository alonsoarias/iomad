{{!
    @template local_jobboard/convocatoria_list

    Convocatoria list template.

    Context variables:
    * convocatorias - Array of convocatoria card data
    * hasconvocatorias - Boolean
    * count - Total count
    * pagination - Pagination HTML
    * filters - Current filters
    * createurl - URL to create new convocatoria (for managers)
    * canmanage - Boolean if user can manage
}}
<div class="jb-convocatoria-list">
    {{#canmanage}}
    <div class="jb-d-flex jb-justify-content-between jb-align-items-center jb-mb-3">
        <h4 class="jb-mb-0">{{#str}}convocatorias, local_jobboard{{/str}}</h4>
        <a href="{{createurl}}" class="jb-btn jb-btn-primary">
            <i class="fa fa-plus jb-mr-1" aria-hidden="true"></i>
            {{#str}}createconvocatoria, local_jobboard{{/str}}
        </a>
    </div>
    {{/canmanage}}
    {{^canmanage}}
    <h4 class="jb-mb-3">{{#str}}convocatorias, local_jobboard{{/str}}</h4>
    {{/canmanage}}

    {{#hasconvocatorias}}
    <div class="jb-row">
        {{#convocatorias}}
        <div class="jb-col-lg-6">
            {{> local_jobboard/convocatoria_card }}
        </div>
        {{/convocatorias}}
    </div>
    {{{pagination}}}
    {{/hasconvocatorias}}
    {{^hasconvocatorias}}
    {{> local_jobboard/components/empty_state }}
    {{/hasconvocatorias}}
</div>
