{{!
    @template local_jobboard/pages/vacancy_detail

    Vacancy detail page template with enhanced UX.
    Uses jb-* CSS classes for consistent styling.
    Includes accessibility features, animations, and loading states.

    Context variables:
    * breadcrumbs - Array of breadcrumb items
    * vacancy - Vacancy data object
    * convocatoria - Optional convocatoria info
    * canapply - Boolean if user can apply
    * hasapplied - Boolean if already applied
    * canedit - Boolean if can edit
    * canmanage - Boolean if can manage
    * applicationstats - Stats for managers
    * isurgent - Boolean if closing soon
    * isclosed - Boolean if closed
    * daysremaining - Days until close
    * loading - Show skeleton loading state

    Example context (json):
    {
        "vacancy": {"id": 1, "title": "Developer", "code": "VAC-001"},
        "canapply": true,
        "hasapplied": false
    }
}}
{{#loading}}
{{! Skeleton Loading State }}
<div class="local-jobboard-vacancy-detail" aria-busy="true" aria-label="{{#str}}loading{{/str}}">
    <div class="jb-page-header jb-mb-4">
        <div class="jb-skeleton-text" style="width: 200px; height: 1em;"></div>
        <div class="jb-d-flex jb-justify-content-between jb-align-items-center jb-mt-3">
            <div class="jb-skeleton-title" style="width: 60%;"></div>
            <div class="jb-skeleton-text" style="width: 120px; height: 40px;"></div>
        </div>
    </div>
    <div class="jb-skeleton-text jb-mb-4" style="width: 100%; height: 60px;"></div>
    <div class="jb-row">
        <div class="jb-col-lg-8">
            <div class="jb-card jb-card-shadow jb-mb-4">
                <div class="jb-card-header jb-bg-light"><div class="jb-skeleton-text" style="width: 40%;"></div></div>
                <div class="jb-card-body">
                    <div class="jb-skeleton-text" style="width: 100%;"></div>
                    <div class="jb-skeleton-text" style="width: 90%;"></div>
                    <div class="jb-skeleton-text" style="width: 75%;"></div>
                </div>
            </div>
        </div>
        <div class="jb-col-lg-4">
            <div class="jb-card jb-card-shadow">
                <div class="jb-card-header jb-bg-light"><div class="jb-skeleton-text" style="width: 50%;"></div></div>
                <div class="jb-card-body jb-text-center">
                    <div class="jb-skeleton-text jb-mx-auto" style="width: 80%; height: 45px;"></div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/loading}}

{{^loading}}
<div class="local-jobboard-vacancy-detail" data-region="jobboard-vacancy" data-vacancy-id="{{vacancy.id}}">
    {{! Skip Link for Accessibility }}
    <a href="#vacancy-main-content" class="jb-skip-link">
        {{#str}}skiptocontent, local_jobboard{{/str}}
    </a>

    {{! Page Header with Animation }}
    <header class="jb-page-header jb-mb-4 jb-fade-in">
        <nav aria-label="{{#str}}breadcrumb, local_jobboard{{/str}}" class="jb-mb-3">
            <ol class="jb-breadcrumb">
                {{#breadcrumbs}}
                <li class="jb-breadcrumb-item {{#active}}jb-active{{/active}}">
                    {{#url}}<a href="{{url}}">{{label}}</a>{{/url}}
                    {{^url}}<span aria-current="page">{{label}}</span>{{/url}}
                </li>
                {{/breadcrumbs}}
            </ol>
        </nav>
        <div class="jb-d-flex jb-justify-content-between jb-align-items-center jb-flex-wrap jb-gap-2">
            <div>
                <h1 class="jb-fs-4 jb-mb-1">{{vacancy.title}}</h1>
                <code class="jb-small jb-text-muted">{{vacancy.code}}</code>
            </div>
            <div class="jb-btn-group" role="group" aria-label="{{#str}}vacancyactions, local_jobboard{{/str}}">
                {{#canedit}}
                <a href="{{editurl}}" class="jb-btn jb-btn-outline-primary">
                    <i class="fa fa-edit jb-mr-1" aria-hidden="true"></i>
                    {{#str}}edit{{/str}}
                </a>
                {{/canedit}}
                {{#canapply}}
                {{^hasapplied}}
                {{^isclosed}}
                <a href="{{applyurl}}" class="jb-btn jb-btn-success jb-btn-lg jb-pulse-subtle">
                    <i class="fa fa-paper-plane jb-mr-1" aria-hidden="true"></i>
                    {{#str}}apply, local_jobboard{{/str}}
                </a>
                {{/isclosed}}
                {{/hasapplied}}
                {{/canapply}}
            </div>
        </div>
    </header>

    {{! Urgent Banner - Full Width }}
    {{#isurgent}}
    {{^isclosed}}
    <div class="jb-alert jb-alert-warning jb-d-flex jb-align-items-center jb-justify-content-center jb-mb-4 jb-fade-in" role="alert" aria-live="polite">
        <i class="fa fa-exclamation-triangle fa-lg jb-mr-3" aria-hidden="true"></i>
        <div>
            <strong>{{#str}}closingsoon, local_jobboard{{/str}}</strong>
            <span class="jb-ml-2">{{daysremaining}} {{#str}}daysremaining, local_jobboard{{/str}}</span>
        </div>
    </div>
    {{/isclosed}}
    {{/isurgent}}

    {{! Status Banner }}
    <div class="jb-alert jb-alert-{{statuscolor}} jb-d-flex jb-justify-content-between jb-align-items-center jb-mb-4 jb-fade-in-up" role="status">
        <span class="jb-d-flex jb-align-items-center">
            <i class="fa fa-{{statusicon}} jb-mr-2" aria-hidden="true"></i>
            <span class="jb-fw-medium">{{statusmessage}}</span>
        </span>
        <div class="jb-d-flex jb-align-items-center jb-gap-2">
            <span class="jb-badge jb-badge-{{vacancy.statuscolor}}">{{vacancy.statuslabel}}</span>
        </div>
    </div>

    <div class="jb-row" id="vacancy-main-content">
        {{! Main Content Column }}
        <main class="jb-col-lg-8">
            {{! Vacancy Header Card }}
            <article class="jb-card jb-card-shadow jb-mb-4 jb-fade-in-up" style="animation-delay: 0.1s;">
                <div class="jb-card-header jb-bg-primary jb-text-white jb-d-flex jb-justify-content-between jb-align-items-center">
                    <div class="jb-d-flex jb-align-items-center jb-gap-2">
                        <i class="fa fa-briefcase" aria-hidden="true"></i>
                        <span class="jb-fw-medium">{{#str}}vacancyoverview, local_jobboard{{/str}}</span>
                    </div>
                    <span class="jb-badge jb-badge-light">{{vacancy.statuslabel}}</span>
                </div>
                <div class="jb-card-body">
                    <h2 class="jb-card-title jb-fs-4 jb-mb-3">{{vacancy.title}}</h2>

                    {{! Convocatoria Badge }}
                    {{#convocatoria}}
                    <div class="jb-mb-3">
                        <a href="{{convocatoria.viewurl}}" class="jb-badge jb-badge-info jb-badge-pill jb-hover-lift">
                            <i class="fa fa-folder-open jb-mr-1" aria-hidden="true"></i>
                            {{convocatoria.name}}
                        </a>
                    </div>
                    {{/convocatoria}}

                    {{! Quick Info Badges }}
                    <div class="jb-d-flex jb-flex-wrap jb-gap-2 jb-mb-3">
                        {{#vacancy.location}}
                        <span class="jb-badge jb-badge-light" title="{{#str}}location, local_jobboard{{/str}}">
                            <i class="fa fa-map-marker-alt jb-text-primary jb-mr-1" aria-hidden="true"></i>
                            {{vacancy.location}}
                        </span>
                        {{/vacancy.location}}
                        {{#vacancy.modality}}
                        <span class="jb-badge jb-badge-light" title="{{#str}}modality, local_jobboard{{/str}}">
                            <i class="fa fa-{{#vacancy.modalityicon}}{{vacancy.modalityicon}}{{/vacancy.modalityicon}}{{^vacancy.modalityicon}}laptop-house{{/vacancy.modalityicon}} jb-text-info jb-mr-1" aria-hidden="true"></i>
                            {{vacancy.modality}}
                        </span>
                        {{/vacancy.modality}}
                        {{#vacancy.contracttypelabel}}
                        <span class="jb-badge jb-badge-light" title="{{#str}}contracttype, local_jobboard{{/str}}">
                            <i class="fa fa-file-contract jb-text-secondary jb-mr-1" aria-hidden="true"></i>
                            {{vacancy.contracttypelabel}}
                        </span>
                        {{/vacancy.contracttypelabel}}
                        <span class="jb-badge jb-badge-light" title="{{#str}}positions, local_jobboard{{/str}}">
                            <i class="fa fa-users jb-text-success jb-mr-1" aria-hidden="true"></i>
                            {{vacancy.positions}} {{#str}}positions, local_jobboard{{/str}}
                        </span>
                    </div>
                </div>
            </article>

            {{! Description Card }}
            {{#vacancy.description}}
            <section class="jb-card jb-card-shadow jb-mb-4 jb-fade-in-up" style="animation-delay: 0.2s;" aria-labelledby="desc-heading">
                <div class="jb-card-header jb-bg-white jb-d-flex jb-align-items-center">
                    <i class="fa fa-file-alt jb-text-primary jb-mr-2" aria-hidden="true"></i>
                    <h3 class="jb-fs-5 jb-mb-0" id="desc-heading">
                        {{#str}}vacancydescription, local_jobboard{{/str}}
                    </h3>
                </div>
                <div class="jb-card-body jb-prose">
                    {{{vacancy.description}}}
                </div>
            </section>
            {{/vacancy.description}}

            {{! Requirements Card }}
            {{#vacancy.requirements}}
            <section class="jb-card jb-card-shadow jb-mb-4 jb-fade-in-up" style="animation-delay: 0.3s;" aria-labelledby="req-heading">
                <div class="jb-card-header jb-bg-white jb-d-flex jb-align-items-center">
                    <i class="fa fa-check-circle jb-text-success jb-mr-2" aria-hidden="true"></i>
                    <h3 class="jb-fs-5 jb-mb-0" id="req-heading">
                        {{#str}}requirements, local_jobboard{{/str}}
                    </h3>
                </div>
                <div class="jb-card-body jb-prose">
                    {{{vacancy.requirements}}}
                </div>
            </section>
            {{/vacancy.requirements}}

            {{! Desirable Card }}
            {{#vacancy.desirable}}
            <section class="jb-card jb-card-shadow jb-mb-4 jb-fade-in-up" style="animation-delay: 0.4s;" aria-labelledby="des-heading">
                <div class="jb-card-header jb-bg-white jb-d-flex jb-align-items-center">
                    <i class="fa fa-star jb-text-warning jb-mr-2" aria-hidden="true"></i>
                    <h3 class="jb-fs-5 jb-mb-0" id="des-heading">
                        {{#str}}desirable, local_jobboard{{/str}}
                    </h3>
                </div>
                <div class="jb-card-body jb-prose">
                    {{{vacancy.desirable}}}
                </div>
            </section>
            {{/vacancy.desirable}}

            {{! Benefits Card }}
            {{#vacancy.benefits}}
            <section class="jb-card jb-card-shadow jb-mb-4 jb-fade-in-up" style="animation-delay: 0.5s;" aria-labelledby="benefits-heading">
                <div class="jb-card-header jb-bg-white jb-d-flex jb-align-items-center">
                    <i class="fa fa-gift jb-text-info jb-mr-2" aria-hidden="true"></i>
                    <h3 class="jb-fs-5 jb-mb-0" id="benefits-heading">
                        {{#str}}benefits, local_jobboard{{/str}}
                    </h3>
                </div>
                <div class="jb-card-body jb-prose">
                    {{{vacancy.benefits}}}
                </div>
            </section>
            {{/vacancy.benefits}}
        </main>

        {{! Sidebar Column }}
        <aside class="jb-col-lg-4">
            {{! Apply CTA Card - Sticky }}
            <div class="jb-sticky-sidebar">
                <section class="jb-card jb-card-shadow jb-mb-4 jb-border-primary jb-fade-in-up" style="animation-delay: 0.15s;" aria-labelledby="apply-heading">
                    <div class="jb-card-header jb-bg-primary jb-text-white">
                        <h3 class="jb-fs-5 jb-mb-0 jb-d-flex jb-align-items-center" id="apply-heading">
                            <i class="fa fa-paper-plane jb-mr-2" aria-hidden="true"></i>
                            {{#str}}readytoapply, local_jobboard{{/str}}
                        </h3>
                    </div>
                    <div class="jb-card-body jb-text-center">
                        {{#hasapplied}}
                        <div class="jb-py-3">
                            <div class="jb-text-success jb-mb-3">
                                <i class="fa fa-check-circle fa-3x" aria-hidden="true"></i>
                            </div>
                            <p class="jb-text-success jb-fw-bold jb-fs-5">{{#str}}alreadyapplied, local_jobboard{{/str}}</p>
                            <a href="{{myapplicationsurl}}" class="jb-btn jb-btn-outline-primary jb-btn-block">
                                <i class="fa fa-folder-open jb-mr-2" aria-hidden="true"></i>
                                {{#str}}viewmyapplications, local_jobboard{{/str}}
                            </a>
                        </div>
                        {{/hasapplied}}

                        {{^hasapplied}}
                        {{#canapply}}
                        {{^isclosed}}
                        <div class="jb-py-2">
                            <p class="jb-text-muted jb-mb-3">{{#str}}applynowdesc, local_jobboard{{/str}}</p>
                            <a href="{{applyurl}}" class="jb-btn jb-btn-success jb-btn-lg jb-btn-block jb-hover-lift">
                                <i class="fa fa-paper-plane jb-mr-2" aria-hidden="true"></i>
                                {{#str}}apply, local_jobboard{{/str}}
                            </a>
                            {{#isurgent}}
                            <p class="jb-text-warning jb-small jb-mt-2 jb-mb-0">
                                <i class="fa fa-clock jb-mr-1" aria-hidden="true"></i>
                                {{daysremaining}} {{#str}}daysremaining, local_jobboard{{/str}}
                            </p>
                            {{/isurgent}}
                        </div>
                        {{/isclosed}}
                        {{#isclosed}}
                        <div class="jb-py-3 jb-text-muted">
                            <i class="fa fa-lock fa-2x jb-mb-2" aria-hidden="true"></i>
                            <p class="jb-mb-0">{{#str}}vacancyclosed, local_jobboard{{/str}}</p>
                        </div>
                        {{/isclosed}}
                        {{/canapply}}

                        {{^canapply}}
                        {{#isclosed}}
                        <div class="jb-py-3 jb-text-muted">
                            <i class="fa fa-lock fa-2x jb-mb-2" aria-hidden="true"></i>
                            <p class="jb-mb-0">{{#str}}vacancyclosed, local_jobboard{{/str}}</p>
                        </div>
                        {{/isclosed}}
                        {{^isclosed}}
                        {{#isloggedin}}
                        <div class="jb-py-3 jb-text-muted">
                            <i class="fa fa-ban fa-2x jb-mb-2" aria-hidden="true"></i>
                            <p class="jb-mb-0">{{#str}}cannotapply, local_jobboard{{/str}}</p>
                        </div>
                        {{/isloggedin}}
                        {{^isloggedin}}
                        <div class="jb-py-2">
                            <p class="jb-text-muted jb-mb-3">{{#str}}logintoapply, local_jobboard{{/str}}</p>
                            <a href="{{loginurl}}" class="jb-btn jb-btn-primary jb-btn-lg jb-btn-block">
                                <i class="fa fa-sign-in-alt jb-mr-2" aria-hidden="true"></i>
                                {{#str}}login{{/str}}
                            </a>
                        </div>
                        {{/isloggedin}}
                        {{/isclosed}}
                        {{/canapply}}
                        {{/hasapplied}}
                    </div>
                </section>

                {{! Details Card }}
                <section class="jb-card jb-card-shadow jb-mb-4 jb-fade-in-up" style="animation-delay: 0.25s;" aria-labelledby="details-heading">
                    <div class="jb-card-header jb-bg-white jb-d-flex jb-align-items-center">
                        <i class="fa fa-info-circle jb-text-info jb-mr-2" aria-hidden="true"></i>
                        <h3 class="jb-fs-5 jb-mb-0" id="details-heading">
                            {{#str}}details, local_jobboard{{/str}}
                        </h3>
                    </div>
                    <div class="jb-card-body jb-p-0">
                        <ul class="jb-list-group jb-list-group-flush">
                            {{#vacancy.department}}
                            <li class="jb-list-group-item jb-d-flex jb-justify-content-between jb-align-items-center">
                                <span class="jb-text-muted jb-small">{{#str}}department, local_jobboard{{/str}}</span>
                                <span class="jb-fw-medium">{{vacancy.department}}</span>
                            </li>
                            {{/vacancy.department}}

                            {{#vacancy.companyname}}
                            <li class="jb-list-group-item jb-d-flex jb-justify-content-between jb-align-items-center">
                                <span class="jb-text-muted jb-small">{{#str}}company, local_jobboard{{/str}}</span>
                                <span class="jb-fw-medium">{{vacancy.companyname}}</span>
                            </li>
                            {{/vacancy.companyname}}

                            {{#vacancy.duration}}
                            <li class="jb-list-group-item jb-d-flex jb-justify-content-between jb-align-items-center">
                                <span class="jb-text-muted jb-small">{{#str}}duration, local_jobboard{{/str}}</span>
                                <span class="jb-fw-medium">{{vacancy.duration}}</span>
                            </li>
                            {{/vacancy.duration}}

                            <li class="jb-list-group-item jb-d-flex jb-justify-content-between jb-align-items-center">
                                <span class="jb-text-muted jb-small">
                                    <i class="fa fa-calendar-alt jb-text-success jb-mr-1" aria-hidden="true"></i>
                                    {{#str}}opendate, local_jobboard{{/str}}
                                </span>
                                <span class="jb-fw-medium">{{vacancy.opendateformatted}}</span>
                            </li>

                            <li class="jb-list-group-item jb-d-flex jb-justify-content-between jb-align-items-center {{#isurgent}}jb-bg-warning-light{{/isurgent}}">
                                <span class="jb-text-muted jb-small">
                                    <i class="fa fa-calendar-times jb-text-danger jb-mr-1" aria-hidden="true"></i>
                                    {{#str}}closedate, local_jobboard{{/str}}
                                </span>
                                <span class="jb-fw-medium {{#isurgent}}jb-text-warning{{/isurgent}}">{{vacancy.closedateformatted}}</span>
                            </li>
                        </ul>
                    </div>

                    {{! Deadline Progress }}
                    {{^isclosed}}
                    <div class="jb-card-footer jb-bg-white">
                        <div class="jb-d-flex jb-justify-content-between jb-align-items-center jb-mb-2">
                            <small class="jb-text-muted">{{#str}}deadlineprogress, local_jobboard{{/str}}</small>
                            <small class="{{#isurgent}}jb-text-warning jb-fw-bold{{/isurgent}}{{^isurgent}}jb-text-muted{{/isurgent}}">
                                {{daysremaining}} {{#str}}daysremaining, local_jobboard{{/str}}
                            </small>
                        </div>
                        <div class="jb-progress" style="height: 8px;" role="progressbar" aria-valuenow="{{progresspercent}}" aria-valuemin="0" aria-valuemax="100" aria-label="{{#str}}deadlineprogress, local_jobboard{{/str}}">
                            <div class="jb-progress-bar jb-bg-{{progresscolor}}" style="width: {{progresspercent}}%;"></div>
                        </div>
                    </div>
                    {{/isclosed}}
                </section>

                {{! Application Stats (for managers) }}
                {{#applicationstats}}
                <section class="jb-card jb-card-shadow jb-mb-4 jb-border-info jb-fade-in-up" style="animation-delay: 0.35s;" aria-labelledby="stats-heading">
                    <div class="jb-card-header jb-bg-info jb-text-white jb-d-flex jb-align-items-center">
                        <i class="fa fa-chart-bar jb-mr-2" aria-hidden="true"></i>
                        <h3 class="jb-fs-5 jb-mb-0" id="stats-heading">
                            {{#str}}applicationstats, local_jobboard{{/str}}
                        </h3>
                    </div>
                    <div class="jb-card-body">
                        <div class="jb-row jb-text-center jb-mb-3">
                            <div class="jb-col-4">
                                <div class="jb-fs-3 jb-fw-bold jb-text-primary">{{total}}</div>
                                <small class="jb-text-muted">{{#str}}total{{/str}}</small>
                            </div>
                            <div class="jb-col-4">
                                <div class="jb-fs-3 jb-fw-bold jb-text-warning">{{pending}}</div>
                                <small class="jb-text-muted">{{#str}}pending, local_jobboard{{/str}}</small>
                            </div>
                            <div class="jb-col-4">
                                <div class="jb-fs-3 jb-fw-bold jb-text-success">{{validated}}</div>
                                <small class="jb-text-muted">{{#str}}validated, local_jobboard{{/str}}</small>
                            </div>
                        </div>
                        <a href="{{manageurl}}" class="jb-btn jb-btn-info jb-btn-block">
                            <i class="fa fa-tasks jb-mr-2" aria-hidden="true"></i>
                            {{#str}}manageapplications, local_jobboard{{/str}}
                        </a>
                    </div>
                </section>
                {{/applicationstats}}

                {{! Metadata (for managers) }}
                {{#canmanage}}
                <section class="jb-card jb-mb-4 jb-bg-light jb-fade-in-up" style="animation-delay: 0.45s;" aria-labelledby="meta-heading">
                    <div class="jb-card-body jb-py-3">
                        <h4 class="jb-sr-only" id="meta-heading">{{#str}}metadata, local_jobboard{{/str}}</h4>
                        <div class="jb-small jb-text-muted">
                            <div class="jb-mb-1">
                                <i class="fa fa-user jb-mr-2" aria-hidden="true"></i>
                                {{#str}}createdby, local_jobboard{{/str}}: <span class="jb-fw-medium">{{createdbyname}}</span>
                            </div>
                            <div class="jb-mb-1">
                                <i class="fa fa-calendar jb-mr-2" aria-hidden="true"></i>
                                {{timecreatedformatted}}
                            </div>
                            {{#modifiedbyname}}
                            <div>
                                <i class="fa fa-edit jb-mr-2" aria-hidden="true"></i>
                                {{#str}}modifiedby, local_jobboard{{/str}}: <span class="jb-fw-medium">{{modifiedbyname}}</span>
                            </div>
                            {{/modifiedbyname}}
                        </div>
                    </div>
                </section>
                {{/canmanage}}
            </div>
        </aside>
    </div>

    {{! Navigation Footer }}
    <nav class="jb-navigation-footer jb-d-flex jb-justify-content-between jb-align-items-center jb-mt-4 jb-py-3 jb-border-top jb-fade-in" aria-label="{{#str}}pagenavigation, local_jobboard{{/str}}">
        <a href="{{backurl}}" class="jb-btn jb-btn-outline-secondary">
            <i class="fa fa-arrow-left jb-mr-2" aria-hidden="true"></i>
            {{backlabel}}
        </a>
        <a href="{{dashboardurl}}" class="jb-btn jb-btn-link jb-text-muted">
            {{#str}}backtodashboard, local_jobboard{{/str}}
            <i class="fa fa-arrow-right jb-ml-2" aria-hidden="true"></i>
        </a>
    </nav>
</div>
{{/loading}}
