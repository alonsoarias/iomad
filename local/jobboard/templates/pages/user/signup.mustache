{{!
    Signup page template for local_jobboard.
    Follows the inteb/remui theme design patterns.

    @package   local_jobboard
    @copyright 2024 ISER
    @license   http://www.gnu.org/copyleft/gpl.html GNU GPL v3 or later
}}
<div class="jb-container-fluid jb-px-3 jb-px-md-5">
    {{! Header Section }}
    <div class="jb-text-center jb-mb-4 jb-pb-3 jb-border-bottom">
        <div class="jb-mb-3">
            {{#pix}}i/user, core{{/pix}}
        </div>
        <h1 class="jb-fs-3 jb-mb-2">{{title}}</h1>
        <p class="jb-text-muted">{{intro}}</p>
    </div>

    {{! Vacancy Info Card (if applying to specific vacancy) }}
    {{#vacancy}}
    <div class="jb-card jb-mb-4 jb-border-primary">
        <div class="jb-card-header jb-bg-primary jb-text-white jb-py-2">
            <h5 class="jb-mb-0 jb-d-flex jb-align-items-center">
                {{#pix}}i/briefcase, core{{/pix}}
                <span class="jb-ml-2">{{applyingfortext}}</span>
            </h5>
        </div>
        <div class="jb-card-body jb-py-3">
            <h5 class="jb-card-title jb-mb-2 jb-fw-bold">{{vacancy.title}}</h5>
            <p class="jb-card-text jb-mb-1">
                <span class="jb-text-muted">{{codetext}}:</span>
                <strong>{{vacancy.code}}</strong>
            </p>
            {{#vacancy.location}}
            <p class="jb-card-text jb-mb-0 jb-text-muted jb-fs-sm">
                {{#pix}}i/location, core{{/pix}}
                {{vacancy.location}}
            </p>
            {{/vacancy.location}}
        </div>
    </div>
    {{/vacancy}}

    {{! Already have account notice }}
    <div class="jb-alert jb-alert-info jb-d-flex jb-align-items-center jb-mb-4">
        <span class="jb-mr-3">{{#pix}}i/info, core{{/pix}}</span>
        <div class="jb-flex-grow-1">
            <strong>{{alreadyaccounttext}}</strong>
            <a href="{{loginurl}}" class="jb-btn jb-btn-sm jb-btn-primary jb-ml-2">
                {{logintext}}
            </a>
        </div>
    </div>

    {{! Required fields notice }}
    <p class="jb-text-muted jb-fs-sm jb-mb-4">
        <span class="jb-text-danger">*</span> {{requiredfieldstext}}
    </p>

    {{! Progress Steps Indicator }}
    <div class="jb-progress-container jb-mb-4" id="jb-signup-progress">
        <p class="jb-text-muted jb-fs-sm jb-mb-2 jb-text-center">{{#str}}signup_progress, local_jobboard{{/str}}</p>
        <ul class="jb-progress-steps" role="progressbar" aria-label="{{#str}}signup_progress, local_jobboard{{/str}}">
            <li class="jb-step active" data-step="0" data-section="accountheader">
                <div class="jb-step-icon"><i class="fa fa-key" aria-hidden="true"></i></div>
                <span class="jb-step-label">{{#str}}signup_step_account, local_jobboard{{/str}}</span>
            </li>
            <li class="jb-step" data-step="1" data-section="personalinfo">
                <div class="jb-step-icon"><i class="fa fa-user" aria-hidden="true"></i></div>
                <span class="jb-step-label">{{#str}}signup_step_personal, local_jobboard{{/str}}</span>
            </li>
            <li class="jb-step" data-step="2" data-section="contactinfo">
                <div class="jb-step-icon"><i class="fa fa-phone" aria-hidden="true"></i></div>
                <span class="jb-step-label">{{#str}}signup_step_contact, local_jobboard{{/str}}</span>
            </li>
            <li class="jb-step" data-step="3" data-section="academicheader">
                <div class="jb-step-icon"><i class="fa fa-graduation-cap" aria-hidden="true"></i></div>
                <span class="jb-step-label">{{#str}}signup_step_academic, local_jobboard{{/str}}</span>
            </li>
            <li class="jb-step" data-step="4" data-section="termsheader">
                <div class="jb-step-icon"><i class="fa fa-check-circle" aria-hidden="true"></i></div>
                <span class="jb-step-label">{{#str}}signup_step_confirm, local_jobboard{{/str}}</span>
            </li>
        </ul>
    </div>

    {{! The form content }}
    <div class="jb-card">
        <div class="jb-card-body">
            {{{formhtml}}}
        </div>
    </div>
</div>
