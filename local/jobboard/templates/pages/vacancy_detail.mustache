{{!
    @template local_jobboard/pages/vacancy_detail

    Vacancy detail page template.

    Context variables:
    * pageheader - Page header data
    * vacancy - Vacancy data object
    * convocatoria - Optional convocatoria info
    * canapply - Boolean if user can apply
    * hasapplied - Boolean if already applied
    * canedit - Boolean if can edit
    * applicationstats - Stats for managers (total applications, etc.)

    Example context (json):
    {
        "vacancy": {"id": 1, "title": "Developer", "code": "VAC-001"},
        "canapply": true,
        "hasapplied": false
    }
}}
<div class="local-jobboard-vacancy-detail" data-region="jobboard-vacancy" data-vacancy-id="{{vacancy.id}}">
    {{! Page Header }}
    {{> local_jobboard/components/page_header }}

    <div class="row">
        {{! Main Content Column }}
        <div class="col-lg-8">
            {{! Vacancy Header Card }}
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <span class="badge badge-light">{{vacancy.code}}</span>
                    <span class="badge badge-{{vacancy.statuscolor}}">{{vacancy.statuslabel}}</span>
                </div>
                <div class="card-body">
                    <h2 class="card-title mb-3">{{vacancy.title}}</h2>

                    {{! Convocatoria Badge }}
                    {{#convocatoria}}
                    <div class="mb-3">
                        <span class="badge badge-info">
                            <i class="fa fa-folder-open mr-1"></i>
                            {{convocatoria.name}}
                        </span>
                    </div>
                    {{/convocatoria}}

                    {{! Quick Info Badges }}
                    <div class="d-flex flex-wrap mb-3">
                        {{#vacancy.location}}
                        <span class="badge badge-light mr-2 mb-1">
                            <i class="fa fa-map-marker-alt mr-1"></i>
                            {{vacancy.location}}
                        </span>
                        {{/vacancy.location}}
                        {{#vacancy.contracttype}}
                        <span class="badge badge-light mr-2 mb-1">
                            <i class="fa fa-briefcase mr-1"></i>
                            {{vacancy.contracttype}}
                        </span>
                        {{/vacancy.contracttype}}
                        <span class="badge badge-light mb-1">
                            <i class="fa fa-users mr-1"></i>
                            {{vacancy.positions}} {{#str}}positions, local_jobboard{{/str}}
                        </span>
                    </div>

                    {{! Urgent Warning }}
                    {{#vacancy.urgent}}
                    <div class="alert alert-warning">
                        <i class="fa fa-exclamation-triangle mr-2"></i>
                        {{#str}}closingsoondays, local_jobboard, {{vacancy.daysremaining}}{{/str}}
                    </div>
                    {{/vacancy.urgent}}
                </div>
            </div>

            {{! Description Card }}
            {{#vacancy.description}}
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fa fa-file-alt text-primary mr-2"></i>
                        {{#str}}vacancydescription, local_jobboard{{/str}}
                    </h5>
                </div>
                <div class="card-body">
                    {{{vacancy.description}}}
                </div>
            </div>
            {{/vacancy.description}}

            {{! Requirements Card }}
            {{#vacancy.requirements}}
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fa fa-check-circle text-success mr-2"></i>
                        {{#str}}requirements, local_jobboard{{/str}}
                    </h5>
                </div>
                <div class="card-body">
                    {{{vacancy.requirements}}}
                </div>
            </div>
            {{/vacancy.requirements}}

            {{! Desirable Card }}
            {{#vacancy.desirable}}
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fa fa-star text-warning mr-2"></i>
                        {{#str}}desirable, local_jobboard{{/str}}
                    </h5>
                </div>
                <div class="card-body">
                    {{{vacancy.desirable}}}
                </div>
            </div>
            {{/vacancy.desirable}}
        </div>

        {{! Sidebar Column }}
        <div class="col-lg-4">
            {{! Apply CTA Card }}
            <div class="card shadow-sm mb-4 border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fa fa-paper-plane mr-2"></i>
                        {{#str}}readytoapply, local_jobboard{{/str}}
                    </h5>
                </div>
                <div class="card-body text-center">
                    {{#hasapplied}}
                    <div class="text-success mb-3">
                        <i class="fa fa-check-circle fa-3x"></i>
                    </div>
                    <p class="text-success font-weight-bold">{{#str}}alreadyapplied, local_jobboard{{/str}}</p>
                    <a href="{{myapplicationsurl}}" class="btn btn-outline-primary btn-block">
                        {{#str}}viewmyapplications, local_jobboard{{/str}}
                    </a>
                    {{/hasapplied}}

                    {{^hasapplied}}
                    {{#canapply}}
                    <p class="text-muted mb-3">{{#str}}applynowdesc, local_jobboard{{/str}}</p>
                    <a href="{{applyurl}}" class="btn btn-primary btn-lg btn-block">
                        <i class="fa fa-paper-plane mr-2"></i>
                        {{#str}}apply, local_jobboard{{/str}}
                    </a>
                    {{/canapply}}

                    {{^canapply}}
                    {{#isloggedin}}
                    <p class="text-muted">{{#str}}cannotapply, local_jobboard{{/str}}</p>
                    {{/isloggedin}}
                    {{^isloggedin}}
                    <p class="text-muted mb-3">{{#str}}logintoapply, local_jobboard{{/str}}</p>
                    <a href="{{loginurl}}" class="btn btn-primary btn-lg btn-block">
                        <i class="fa fa-sign-in-alt mr-2"></i>
                        {{#str}}login{{/str}}
                    </a>
                    {{/isloggedin}}
                    {{/canapply}}
                    {{/hasapplied}}
                </div>
            </div>

            {{! Details Card }}
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fa fa-info-circle text-info mr-2"></i>
                        {{#str}}details, local_jobboard{{/str}}
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="mb-0">
                        {{#vacancy.department}}
                        <dt class="text-muted small">{{#str}}department, local_jobboard{{/str}}</dt>
                        <dd class="mb-2">{{vacancy.department}}</dd>
                        {{/vacancy.department}}

                        {{#vacancy.duration}}
                        <dt class="text-muted small">{{#str}}duration, local_jobboard{{/str}}</dt>
                        <dd class="mb-2">{{vacancy.duration}}</dd>
                        {{/vacancy.duration}}

                        {{! Salary field removed in Phase 10 }}

                        <dt class="text-muted small">{{#str}}opendate, local_jobboard{{/str}}</dt>
                        <dd class="mb-2">
                            <i class="fa fa-calendar-alt text-success mr-1"></i>
                            {{vacancy.opendate}}
                        </dd>

                        <dt class="text-muted small">{{#str}}closedate, local_jobboard{{/str}}</dt>
                        <dd class="mb-0 {{#vacancy.urgent}}text-warning font-weight-bold{{/vacancy.urgent}}">
                            <i class="fa fa-calendar-times text-danger mr-1"></i>
                            {{vacancy.closedate}}
                        </dd>
                    </dl>

                    {{! Deadline Progress }}
                    <div class="mt-3">
                        <small class="text-muted">{{#str}}deadlineprogress, local_jobboard{{/str}}</small>
                        <div class="progress mt-1" style="height: 8px;">
                            <div class="progress-bar bg-{{vacancy.progresscolor}}"
                                 role="progressbar"
                                 style="width: {{vacancy.progresspercent}}%;"
                                 aria-valuenow="{{vacancy.progresspercent}}"
                                 aria-valuemin="0"
                                 aria-valuemax="100"></div>
                        </div>
                        <small class="text-muted">{{vacancy.daysremaining}} {{#str}}daysremaining, local_jobboard{{/str}}</small>
                    </div>
                </div>
            </div>

            {{! Application Stats (for managers) }}
            {{#applicationstats}}
            <div class="card shadow-sm mb-4 border-info">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fa fa-chart-bar mr-2"></i>
                        {{#str}}applicationstats, local_jobboard{{/str}}
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-4">
                            <h4 class="mb-0 text-primary">{{total}}</h4>
                            <small class="text-muted">{{#str}}total{{/str}}</small>
                        </div>
                        <div class="col-4">
                            <h4 class="mb-0 text-warning">{{pending}}</h4>
                            <small class="text-muted">{{#str}}pending, local_jobboard{{/str}}</small>
                        </div>
                        <div class="col-4">
                            <h4 class="mb-0 text-success">{{validated}}</h4>
                            <small class="text-muted">{{#str}}validated, local_jobboard{{/str}}</small>
                        </div>
                    </div>
                    <hr>
                    <a href="{{manageurl}}" class="btn btn-outline-info btn-sm btn-block">
                        {{#str}}manageapplications, local_jobboard{{/str}}
                    </a>
                </div>
            </div>
            {{/applicationstats}}

            {{! Edit Button (for managers) }}
            {{#canedit}}
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <a href="{{editurl}}" class="btn btn-outline-secondary btn-block">
                        <i class="fa fa-edit mr-2"></i>
                        {{#str}}editvacancy, local_jobboard{{/str}}
                    </a>
                </div>
            </div>
            {{/canedit}}
        </div>
    </div>
</div>
