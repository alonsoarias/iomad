{{!
    @template local_jobboard/pages/review

    Document review page template with enhanced UX.
    Uses jb-* CSS classes for consistent styling.
    Supports both queue view and single application review modes.

    Context variables:
    * breadcrumbs - Array of breadcrumb items
    * stats - Review queue stats
    * filterform - Filter form data
    * hasapplications - Boolean
    * applications - Array of applications pending review
    * selectedapplication - Selected application for review (if any)
    * documents - Documents to review
    * pagination - Pagination HTML
    * loading - Show skeleton loading state

    Example context (json):
    {
        "hasapplications": true,
        "applications": [{"id": 1, "applicantname": "John Doe"}]
    }
}}
{{#loading}}
{{! Skeleton Loading State }}
<div class="local-jobboard-review" aria-busy="true" aria-label="{{#str}}loading{{/str}}">
    <div class="jb-page-header jb-mb-4">
        <div class="jb-skeleton-text" style="width: 200px; height: 1em;"></div>
        <div class="jb-d-flex jb-justify-content-between jb-align-items-center jb-mt-3">
            <div class="jb-skeleton-title" style="width: 40%;"></div>
        </div>
    </div>
    <div class="jb-row jb-mb-4">
        <div class="jb-col-lg-3 jb-col-md-6 jb-mb-3">
            {{> local_jobboard/components/stat_card }}
        </div>
        <div class="jb-col-lg-3 jb-col-md-6 jb-mb-3">
            {{> local_jobboard/components/stat_card }}
        </div>
        <div class="jb-col-lg-3 jb-col-md-6 jb-mb-3">
            {{> local_jobboard/components/stat_card }}
        </div>
        <div class="jb-col-lg-3 jb-col-md-6 jb-mb-3">
            {{> local_jobboard/components/stat_card }}
        </div>
    </div>
    <div class="jb-row">
        <div class="jb-col-lg-6 jb-mb-4">
            <div class="jb-card jb-card-shadow">
                <div class="jb-card-header jb-bg-light"><div class="jb-skeleton-text" style="width: 60%;"></div></div>
                <div class="jb-card-body">
                    <div class="jb-skeleton-text" style="width: 80%;"></div>
                    <div class="jb-skeleton-text" style="width: 100%;"></div>
                </div>
            </div>
        </div>
        <div class="jb-col-lg-6 jb-mb-4">
            <div class="jb-card jb-card-shadow">
                <div class="jb-card-header jb-bg-light"><div class="jb-skeleton-text" style="width: 60%;"></div></div>
                <div class="jb-card-body">
                    <div class="jb-skeleton-text" style="width: 80%;"></div>
                    <div class="jb-skeleton-text" style="width: 100%;"></div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/loading}}

{{^loading}}
<div class="local-jobboard-review" data-region="jobboard-review">
    {{! Skip Link for Accessibility }}
    <a href="#review-main-content" class="jb-skip-link">
        {{#str}}skiptocontent, local_jobboard{{/str}}
    </a>

    {{! Page Header }}
    <header class="jb-page-header jb-mb-4 jb-fade-in">
        <nav aria-label="{{#str}}breadcrumb, local_jobboard{{/str}}" class="jb-mb-3">
            <ol class="jb-breadcrumb">
                {{#breadcrumbs}}
                <li class="jb-breadcrumb-item {{#active}}jb-active{{/active}}">
                    {{#url}}<a href="{{url}}">{{label}}</a>{{/url}}
                    {{^url}}<span aria-current="page">{{label}}</span>{{/url}}
                </li>
                {{/breadcrumbs}}
            </ol>
        </nav>
        <div class="jb-d-flex jb-justify-content-between jb-align-items-center jb-flex-wrap jb-gap-2">
            <h1 class="jb-fs-4 jb-mb-0">
                <i class="fa fa-clipboard-check jb-text-primary jb-mr-2" aria-hidden="true"></i>
                {{pagetitle}}
            </h1>
            {{#headeractions}}
            <div class="jb-btn-group" role="group">
                {{#headeractions}}
                <a href="{{url}}" class="jb-btn jb-btn-{{class}}">
                    <i class="fa fa-{{icon}} jb-mr-1" aria-hidden="true"></i>
                    {{label}}
                </a>
                {{/headeractions}}
            </div>
            {{/headeractions}}
        </div>
    </header>

    {{! Statistics Row }}
    {{#stats.0}}
    <section class="jb-row jb-mb-4" role="region" aria-label="{{#str}}reviewstatistics, local_jobboard{{/str}}">
        {{#stats}}
        <div class="jb-col-lg-3 jb-col-md-6 jb-mb-3 jb-fade-in-up" style="animation-delay: {{animdelay}}s;">
            {{> local_jobboard/components/stat_card }}
        </div>
        {{/stats}}
    </section>
    {{/stats.0}}

    <div id="review-main-content">
        {{! ========== SINGLE APPLICATION REVIEW MODE ========== }}
        {{#selectedapplication}}

        {{! Previous/Next Navigation }}
        {{#shownav}}
        <nav class="jb-review-navigation jb-d-flex jb-justify-content-between jb-align-items-center jb-p-3 jb-bg-light jb-rounded jb-mb-4 jb-fade-in-up" aria-label="{{#str}}reviewnavigation, local_jobboard{{/str}}">
            {{#prevurl}}
            <a href="{{prevurl}}" class="jb-btn jb-btn-outline-primary">
                <i class="fa fa-chevron-left jb-mr-2" aria-hidden="true"></i>
                <span class="jb-d-none jb-d-sm-inline">{{#str}}previousapplication, local_jobboard{{/str}}</span>
                <span class="jb-d-sm-none">{{#str}}prev{{/str}}</span>
            </a>
            {{/prevurl}}
            {{^prevurl}}
            <span class="jb-btn jb-btn-outline-secondary jb-disabled" aria-disabled="true">
                <i class="fa fa-chevron-left jb-mr-2" aria-hidden="true"></i>
                <span class="jb-d-none jb-d-sm-inline">{{#str}}previousapplication, local_jobboard{{/str}}</span>
            </span>
            {{/prevurl}}

            <span class="jb-badge jb-badge-primary jb-badge-pill jb-px-3 jb-py-2 jb-fs-6" aria-label="{{#str}}position, local_jobboard{{/str}}: {{navposition}} {{#str}}of, local_jobboard{{/str}} {{navtotal}}">
                {{navposition}} / {{navtotal}}
            </span>

            {{#nexturl}}
            <a href="{{nexturl}}" class="jb-btn jb-btn-outline-primary">
                <span class="jb-d-none jb-d-sm-inline">{{#str}}nextapplication, local_jobboard{{/str}}</span>
                <span class="jb-d-sm-none">{{#str}}next{{/str}}</span>
                <i class="fa fa-chevron-right jb-ml-2" aria-hidden="true"></i>
            </a>
            {{/nexturl}}
            {{^nexturl}}
            <span class="jb-btn jb-btn-outline-secondary jb-disabled" aria-disabled="true">
                <span class="jb-d-none jb-d-sm-inline">{{#str}}nextapplication, local_jobboard{{/str}}</span>
                <i class="fa fa-chevron-right jb-ml-2" aria-hidden="true"></i>
            </span>
            {{/nexturl}}
        </nav>
        {{/shownav}}

        <div class="jb-row">
            {{! Documents Column }}
            <main class="jb-col-lg-8">
                {{! Documents Card }}
                <section class="jb-card jb-card-shadow jb-mb-4 jb-fade-in-up" style="animation-delay: 0.1s;" aria-labelledby="documents-review-heading">
                    <div class="jb-card-header jb-bg-primary jb-text-white jb-d-flex jb-justify-content-between jb-align-items-center">
                        <div class="jb-d-flex jb-align-items-center">
                            <i class="fa fa-folder-open jb-mr-2" aria-hidden="true"></i>
                            <h2 class="jb-fs-5 jb-mb-0" id="documents-review-heading">
                                {{#str}}documentlist, local_jobboard{{/str}}
                            </h2>
                        </div>
                        {{#canvalidateall}}
                        <a href="{{validateallurl}}" class="jb-btn jb-btn-success jb-btn-sm jb-hover-lift">
                            <i class="fa fa-check-double jb-mr-1" aria-hidden="true"></i>
                            {{#str}}validateall, local_jobboard{{/str}}
                        </a>
                        {{/canvalidateall}}
                    </div>

                    {{#hasdocuments}}
                    <ul class="jb-list-group jb-list-group-flush" role="list" aria-label="{{#str}}documentstoreview, local_jobboard{{/str}}">
                        {{#documents}}
                        <li class="jb-list-group-item jb-doc-item jb-doc-{{status}}" data-document-id="{{id}}" role="listitem">
                            <div class="jb-d-flex jb-justify-content-between jb-align-items-start">
                                {{! Document Info }}
                                <div class="jb-d-flex jb-align-items-start jb-flex-grow-1">
                                    <div class="jb-flex-shrink-0 jb-mr-3 jb-mt-1">
                                        <i class="fa fa-{{statusicon}} fa-lg jb-text-{{statuscolor}}" aria-hidden="true"></i>
                                    </div>
                                    <div class="jb-flex-grow-1">
                                        <h3 class="jb-fs-6 jb-mb-1 jb-fw-bold">{{typename}}</h3>
                                        <small class="jb-text-muted jb-d-block jb-mb-2">{{filename}}</small>
                                        <div class="jb-d-flex jb-flex-wrap jb-gap-2 jb-align-items-center">
                                            <span class="jb-badge jb-badge-{{statuscolor}}">
                                                {{statuslabel}}
                                            </span>
                                            {{#reviewedby}}
                                            <small class="jb-text-muted">
                                                <i class="fa fa-user-check jb-mr-1" aria-hidden="true"></i>
                                                {{reviewedby}} - {{reviewedat}}
                                            </small>
                                            {{/reviewedby}}
                                        </div>
                                        {{#rejectreason}}
                                        <div class="jb-alert jb-alert-danger jb-mt-2 jb-mb-0 jb-py-2 jb-small" role="alert">
                                            <i class="fa fa-circle-exclamation jb-mr-1" aria-hidden="true"></i>
                                            {{rejectreason}}
                                        </div>
                                        {{/rejectreason}}
                                    </div>
                                </div>

                                {{! Actions }}
                                <div class="jb-btn-group-vertical jb-ml-3" role="group" aria-label="{{#str}}documentactions, local_jobboard{{/str}}">
                                    {{#downloadurl}}
                                    <a href="{{downloadurl}}" class="jb-btn jb-btn-sm jb-btn-outline-primary" target="_blank" rel="noopener noreferrer" title="{{#str}}download{{/str}}">
                                        <i class="fa fa-download" aria-hidden="true"></i>
                                        <span class="jb-sr-only">{{#str}}download{{/str}} {{typename}}</span>
                                    </a>
                                    {{/downloadurl}}

                                    {{#ispending}}
                                    <a href="{{validateurl}}" class="jb-btn jb-btn-sm jb-btn-success" title="{{#str}}approve, local_jobboard{{/str}}">
                                        <i class="fa fa-check" aria-hidden="true"></i>
                                        <span class="jb-sr-only">{{#str}}approve, local_jobboard{{/str}} {{typename}}</span>
                                    </a>
                                    <button type="button" class="jb-btn jb-btn-sm jb-btn-danger" data-toggle="modal" data-target="#rejectModal{{id}}" title="{{#str}}reject, local_jobboard{{/str}}">
                                        <i class="fa fa-xmark" aria-hidden="true"></i>
                                        <span class="jb-sr-only">{{#str}}reject, local_jobboard{{/str}} {{typename}}</span>
                                    </button>
                                    {{/ispending}}
                                </div>
                            </div>
                        </li>

                        {{! Reject Modal }}
                        {{#ispending}}
                        <div class="modal fade" id="rejectModal{{id}}" tabindex="-1" role="dialog" aria-labelledby="rejectModalLabel{{id}}" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <form method="post" action="{{rejecturl}}">
                                        <input type="hidden" name="sesskey" value="{{sesskey}}">
                                        <div class="modal-header jb-bg-danger jb-text-white">
                                            <h4 class="modal-title jb-fs-5 jb-d-flex jb-align-items-center" id="rejectModalLabel{{id}}">
                                                <i class="fa fa-triangle-exclamation jb-mr-2" aria-hidden="true"></i>
                                                {{#str}}rejectdocument, local_jobboard{{/str}}
                                            </h4>
                                            <button type="button" class="close jb-text-white" data-dismiss="modal" aria-label="{{#str}}close, local_jobboard{{/str}}">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <p class="jb-text-muted jb-mb-3">
                                                <i class="fa fa-file jb-mr-2" aria-hidden="true"></i>
                                                {{typename}}
                                            </p>
                                            <div class="jb-form-group">
                                                <label for="reason{{id}}" class="jb-form-label jb-fw-bold">
                                                    {{#str}}rejectreason, local_jobboard{{/str}}
                                                    <span class="jb-text-danger" aria-hidden="true">*</span>
                                                </label>
                                                <textarea name="reason" id="reason{{id}}" class="jb-form-control" rows="3" required aria-required="true" placeholder="{{#str}}rejectreason_placeholder, local_jobboard{{/str}}"></textarea>
                                                <small class="jb-form-text jb-text-muted">{{#str}}rejectreason_help, local_jobboard{{/str}}</small>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="jb-btn jb-btn-secondary" data-dismiss="modal">
                                                {{#str}}cancel{{/str}}
                                            </button>
                                            <button type="submit" class="jb-btn jb-btn-danger">
                                                <i class="fa fa-xmark jb-mr-1" aria-hidden="true"></i>
                                                {{#str}}reject, local_jobboard{{/str}}
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        {{/ispending}}
                        {{/documents}}
                    </ul>
                    {{/hasdocuments}}

                    {{^hasdocuments}}
                    <div class="jb-card-body jb-text-center jb-py-5" role="status">
                        <i class="fa fa-file fa-3x jb-text-muted jb-mb-3" aria-hidden="true"></i>
                        <p class="jb-text-muted jb-mb-0">{{#str}}nodocumentstoreview, local_jobboard{{/str}}</p>
                    </div>
                    {{/hasdocuments}}
                </section>
            </main>

            {{! Sidebar }}
            <aside class="jb-col-lg-4">
                <div class="jb-sticky-sidebar">
                    {{! Applicant Info }}
                    <section class="jb-card jb-card-shadow jb-mb-4 jb-fade-in-up" style="animation-delay: 0.15s;" aria-labelledby="applicant-heading">
                        <div class="jb-card-header jb-bg-secondary jb-text-white jb-d-flex jb-align-items-center">
                            <i class="fa fa-user jb-mr-2" aria-hidden="true"></i>
                            <h2 class="jb-fs-5 jb-mb-0" id="applicant-heading">
                                {{#str}}applicantinfo, local_jobboard{{/str}}
                            </h2>
                        </div>
                        <div class="jb-card-body">
                            <h3 class="jb-fs-5 jb-mb-2">{{selectedapplication.applicantname}}</h3>
                            <p class="jb-mb-2">
                                <i class="fa fa-envelope jb-text-muted jb-mr-2" aria-hidden="true"></i>
                                <a href="mailto:{{selectedapplication.email}}" class="jb-text-break">{{selectedapplication.email}}</a>
                            </p>
                            <small class="jb-text-muted">
                                <i class="fa fa-calendar-days jb-mr-1" aria-hidden="true"></i>
                                {{#str}}dateapplied, local_jobboard{{/str}}: {{selectedapplication.dateapplied}}
                            </small>
                        </div>
                    </section>

                    {{! Vacancy Info }}
                    <section class="jb-card jb-card-shadow jb-mb-4 jb-fade-in-up" style="animation-delay: 0.2s;" aria-labelledby="vacancy-heading">
                        <div class="jb-card-header jb-bg-info jb-text-white jb-d-flex jb-align-items-center">
                            <i class="fa fa-briefcase jb-mr-2" aria-hidden="true"></i>
                            <h2 class="jb-fs-5 jb-mb-0" id="vacancy-heading">
                                {{#str}}vacancy, local_jobboard{{/str}}
                            </h2>
                        </div>
                        <div class="jb-card-body">
                            <span class="jb-badge jb-badge-secondary jb-mb-2">{{selectedapplication.vacancycode}}</span>
                            <h3 class="jb-fs-5 jb-mb-2">{{selectedapplication.vacancytitle}}</h3>
                            <span class="jb-badge jb-badge-{{selectedapplication.statuscolor}}">{{selectedapplication.statuslabel}}</span>
                        </div>
                    </section>

                    {{! Review Progress }}
                    <section class="jb-card jb-card-shadow jb-mb-4 jb-border-primary jb-fade-in-up" style="animation-delay: 0.25s;" aria-labelledby="progress-heading">
                        <div class="jb-card-header jb-bg-primary jb-text-white jb-d-flex jb-align-items-center">
                            <i class="fa fa-list-check jb-mr-2" aria-hidden="true"></i>
                            <h2 class="jb-fs-5 jb-mb-0" id="progress-heading">
                                {{#str}}reviewprogress, local_jobboard{{/str}}
                            </h2>
                        </div>
                        <div class="jb-card-body">
                            {{! Stacked Progress Bar }}
                            <div class="jb-progress jb-mb-3" style="height: 25px;" role="progressbar" aria-label="{{#str}}reviewprogress, local_jobboard{{/str}}">
                                <div class="jb-progress-bar jb-bg-success" style="width: {{approvedpercent}}%;" title="{{approvedcount}} {{#str}}docstatus:approved, local_jobboard{{/str}}">
                                    {{#approvedcount}}{{approvedcount}}{{/approvedcount}}
                                </div>
                                <div class="jb-progress-bar jb-bg-danger" style="width: {{rejectedpercent}}%;" title="{{rejectedcount}} {{#str}}docstatus:rejected, local_jobboard{{/str}}">
                                    {{#rejectedcount}}{{rejectedcount}}{{/rejectedcount}}
                                </div>
                                <div class="jb-progress-bar jb-bg-warning" style="width: {{pendingpercent}}%;" title="{{pendingcount}} {{#str}}docstatus:pending, local_jobboard{{/str}}">
                                    {{#pendingcount}}{{pendingcount}}{{/pendingcount}}
                                </div>
                            </div>

                            {{! Legend }}
                            <div class="jb-d-flex jb-flex-wrap jb-gap-3 jb-small">
                                <span class="jb-d-flex jb-align-items-center">
                                    <span class="jb-badge jb-badge-success jb-mr-1">{{approvedcount}}</span>
                                    {{#str}}docstatus:approved, local_jobboard{{/str}}
                                </span>
                                <span class="jb-d-flex jb-align-items-center">
                                    <span class="jb-badge jb-badge-danger jb-mr-1">{{rejectedcount}}</span>
                                    {{#str}}docstatus:rejected, local_jobboard{{/str}}
                                </span>
                                <span class="jb-d-flex jb-align-items-center">
                                    <span class="jb-badge jb-badge-warning jb-mr-1">{{pendingcount}}</span>
                                    {{#str}}docstatus:pending, local_jobboard{{/str}}
                                </span>
                            </div>
                        </div>

                        {{! All Reviewed State }}
                        {{#allreviewed}}
                        <footer class="jb-card-footer jb-bg-success-light jb-text-center">
                            <div class="jb-text-success jb-mb-3" role="status">
                                <i class="fa fa-circle-check fa-2x jb-mb-2" aria-hidden="true"></i>
                                <div class="jb-fw-bold">{{#str}}alldocsreviewed, local_jobboard{{/str}}</div>
                            </div>
                            <form method="post" action="{{submitreviewurl}}">
                                <input type="hidden" name="sesskey" value="{{sesskey}}">
                                <input type="hidden" name="action" value="markreviewed">
                                <input type="hidden" name="applicationid" value="{{selectedapplication.id}}">
                                <input type="hidden" name="view" value="review">
                                <div class="jb-form-group jb-mb-3">
                                    <label for="observations" class="jb-form-label jb-small jb-fw-bold jb-text-left jb-d-block">
                                        {{#str}}reviewobservations, local_jobboard{{/str}}
                                    </label>
                                    <textarea name="observations" id="observations" class="jb-form-control" rows="2" placeholder="{{#str}}reviewobservations_placeholder, local_jobboard{{/str}}"></textarea>
                                </div>
                                <button type="submit" class="jb-btn jb-btn-{{completebtncolor}} jb-btn-lg jb-btn-block jb-hover-lift">
                                    <i class="fa fa-clipboard-check jb-mr-2" aria-hidden="true"></i>
                                    {{#str}}submitreview, local_jobboard{{/str}}
                                </button>
                            </form>
                        </footer>
                        {{/allreviewed}}

                        {{! Pending State }}
                        {{#haspending}}
                        <footer class="jb-card-footer jb-bg-warning-light jb-text-center">
                            <div class="jb-mb-2">
                                <i class="fa fa-clock fa-2x jb-text-warning jb-mb-2" aria-hidden="true"></i>
                                <div class="jb-text-warning jb-fw-bold">{{#str}}needsattention, local_jobboard{{/str}}</div>
                            </div>
                            <p class="jb-text-muted jb-small jb-mb-0">
                                {{#str}}documentsremaining, local_jobboard{{/str}}: <strong>{{pendingcount}}</strong>
                            </p>
                        </footer>
                        {{/haspending}}
                    </section>
                </div>
            </aside>
        </div>

        {{! Navigation Footer for Single Review }}
        <nav class="jb-navigation-footer jb-d-flex jb-justify-content-between jb-align-items-center jb-mt-4 jb-py-3 jb-border-top jb-fade-in" aria-label="{{#str}}pagenavigation, local_jobboard{{/str}}">
            <a href="{{backurl}}" class="jb-btn jb-btn-outline-secondary">
                <i class="fa fa-arrow-left jb-mr-2" aria-hidden="true"></i>
                {{#str}}backtoreviewlist, local_jobboard{{/str}}
            </a>
            <a href="{{dashboardurl}}" class="jb-btn jb-btn-link jb-text-muted">
                {{#str}}backtodashboard, local_jobboard{{/str}}
                <i class="fa fa-arrow-right jb-ml-2" aria-hidden="true"></i>
            </a>
        </nav>
        {{/selectedapplication}}

        {{! ========== APPLICATIONS QUEUE MODE ========== }}
        {{^selectedapplication}}

        {{! Filter Form }}
        {{#filterform}}
        <form method="get" action="{{action}}" class="jb-card jb-mb-4 jb-fade-in-up" role="search" aria-label="{{#str}}filterapplications, local_jobboard{{/str}}">
            <div class="jb-card-body">
                {{#hiddenfields}}
                <input type="hidden" name="{{name}}" value="{{value}}">
                {{/hiddenfields}}
                <div class="jb-row jb-align-items-end">
                    {{#fields}}
                    <div class="jb-col-md-4 jb-mb-2">
                        <label for="filter-{{name}}" class="jb-form-label jb-small jb-text-muted">{{label}}</label>
                        <select name="{{name}}" id="filter-{{name}}" class="jb-form-select">
                            {{#options}}
                            <option value="{{value}}" {{#selected}}selected{{/selected}}>{{label}}</option>
                            {{/options}}
                        </select>
                    </div>
                    {{/fields}}
                    <div class="jb-col-md-4 jb-mb-2">
                        <button type="submit" class="jb-btn jb-btn-primary jb-btn-block">
                            <i class="fa fa-filter jb-mr-1" aria-hidden="true"></i>
                            {{#str}}filter, local_jobboard{{/str}}
                        </button>
                    </div>
                </div>
            </div>
        </form>
        {{/filterform}}

        {{! Applications Queue List }}
        {{#hasapplications}}
        <section class="jb-row" aria-label="{{#str}}applicationsqueue, local_jobboard{{/str}}">
            {{#applications}}
            <div class="jb-col-lg-6 jb-mb-4">
                <article class="jb-card jb-card-h100 jb-card-shadow jb-hover-lift jb-fade-in-up {{#isurgent}}jb-border-danger{{/isurgent}}"
                         aria-labelledby="queue-app-{{id}}"
                         style="animation-delay: {{animdelay}}s;">
                    <div class="jb-card-header jb-d-flex jb-justify-content-between jb-align-items-center
                         {{#haspendingdocs}}jb-bg-warning jb-text-dark{{/haspendingdocs}}{{^haspendingdocs}}jb-bg-success jb-text-white{{/haspendingdocs}}">
                        <div class="jb-d-flex jb-align-items-center jb-gap-2">
                            <span class="jb-badge jb-badge-light">{{vacancycode}}</span>
                            <span class="jb-small jb-fw-medium">{{statuslabel}}</span>
                        </div>
                        {{#isurgent}}
