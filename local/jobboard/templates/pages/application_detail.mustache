{{!
    @template local_jobboard/pages/application_detail

    Application detail page template.

    Context variables:
    * pageheader - Page header data
    * application - Application data object
    * vacancy - Vacancy data
    * applicant - Applicant info (for reviewers)
    * documents - Array of document data
    * history - Status history timeline data
    * workflowactions - Available workflow actions (for managers)
    * canmanage - Boolean if can manage workflow
    * isowner - Boolean if viewing own application

    Example context (json):
    {
        "application": {"id": 1, "status": "submitted"},
        "vacancy": {"title": "Developer"},
        "documents": [{"name": "CV.pdf", "status": "pending"}]
    }
}}
<div class="local-jobboard-application-detail" data-region="jobboard-application" data-application-id="{{application.id}}">
    {{! Page Header }}
    {{> local_jobboard/components/page_header }}

    {{! Status Banner }}
    <div class="alert alert-{{application.statuscolor}} d-flex align-items-center mb-4" role="alert">
        <i class="fa fa-{{application.statusicon}} fa-2x mr-3"></i>
        <div>
            <h5 class="alert-heading mb-1">{{application.statuslabel}}</h5>
            <p class="mb-0 small">{{application.statusdescription}}</p>
        </div>
    </div>

    <div class="row">
        {{! Main Content Column }}
        <div class="col-lg-8">
            {{! Applicant Info Card (for reviewers) }}
            {{#applicant}}
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="fa fa-user mr-2"></i>
                        {{#str}}applicantinfo, local_jobboard{{/str}}
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="mb-0">
                                <dt class="text-muted small">{{#str}}fullname{{/str}}</dt>
                                <dd class="mb-2">{{fullname}}</dd>
                                <dt class="text-muted small">{{#str}}email{{/str}}</dt>
                                <dd class="mb-0">
                                    <a href="mailto:{{email}}">{{email}}</a>
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            {{#idnumber}}
                            <dl class="mb-0">
                                <dt class="text-muted small">{{#str}}idnumber{{/str}}</dt>
                                <dd class="mb-2">{{idnumber}}</dd>
                            </dl>
                            {{/idnumber}}
                            {{#phone}}
                            <dl class="mb-0">
                                <dt class="text-muted small">{{#str}}phone{{/str}}</dt>
                                <dd class="mb-0">{{phone}}</dd>
                            </dl>
                            {{/phone}}
                        </div>
                    </div>
                </div>
            </div>
            {{/applicant}}

            {{! Documents Card }}
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fa fa-folder-open mr-2"></i>
                        {{#str}}documents, local_jobboard{{/str}}
                    </h5>
                    <span class="badge badge-light">{{documentcount}}</span>
                </div>

                {{#hasdocuments}}
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th>{{#str}}documenttype, local_jobboard{{/str}}</th>
                                <th>{{#str}}filename, local_jobboard{{/str}}</th>
                                <th class="text-center">{{#str}}status, local_jobboard{{/str}}</th>
                                <th class="text-right">{{#str}}actions, local_jobboard{{/str}}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#documents}}
                            <tr>
                                <td>
                                    <i class="fa fa-{{fileicon}} text-{{filecolor}} mr-2"></i>
                                    {{typename}}
                                </td>
                                <td class="text-muted small">{{filename}}</td>
                                <td class="text-center">
                                    <span class="badge badge-{{statuscolor}}">
                                        {{#statusicon}}
                                        <i class="fa fa-{{statusicon}} mr-1"></i>
                                        {{/statusicon}}
                                        {{statuslabel}}
                                    </span>
                                </td>
                                <td class="text-right">
                                    <div class="btn-group btn-group-sm">
                                        {{#downloadurl}}
                                        <a href="{{downloadurl}}" class="btn btn-outline-primary" title="{{#str}}download{{/str}}">
                                            <i class="fa fa-download"></i>
                                        </a>
                                        {{/downloadurl}}
                                        {{#canreupload}}
                                        <a href="{{reuploadurl}}" class="btn btn-outline-warning" title="{{#str}}reupload, local_jobboard{{/str}}">
                                            <i class="fa fa-upload"></i>
                                        </a>
                                        {{/canreupload}}
                                    </div>
                                </td>
                            </tr>
                            {{#rejectreason}}
                            <tr class="table-danger">
                                <td colspan="4" class="small">
                                    <i class="fa fa-exclamation-circle mr-1"></i>
                                    <strong>{{#str}}rejectreason, local_jobboard{{/str}}:</strong> {{rejectreason}}
                                </td>
                            </tr>
                            {{/rejectreason}}
                            {{/documents}}
                        </tbody>
                    </table>
                </div>
                {{/hasdocuments}}

                {{^hasdocuments}}
                <div class="card-body text-center text-muted py-4">
                    <i class="fa fa-file-upload fa-2x mb-2"></i>
                    <p class="mb-0">{{#str}}nodocuments, local_jobboard{{/str}}</p>
                </div>
                {{/hasdocuments}}
            </div>

            {{! Status History Timeline }}
            {{#history.0}}
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fa fa-history mr-2"></i>
                        {{#str}}statushistory, local_jobboard{{/str}}
                    </h5>
                </div>
                <div class="card-body">
                    {{> local_jobboard/components/timeline }}
                </div>
            </div>
            {{/history.0}}
        </div>

        {{! Sidebar Column }}
        <div class="col-lg-4">
            {{! Vacancy Info Card }}
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fa fa-briefcase mr-2"></i>
                        {{#str}}vacancy, local_jobboard{{/str}}
                    </h5>
                </div>
                <div class="card-body">
                    <span class="badge badge-secondary mb-2">{{vacancy.code}}</span>
                    <h5>{{vacancy.title}}</h5>
                    {{#vacancy.location}}
                    <p class="small text-muted mb-1">
                        <i class="fa fa-map-marker-alt mr-1"></i>
                        {{vacancy.location}}
                    </p>
                    {{/vacancy.location}}
                    <a href="{{vacancy.viewurl}}" class="btn btn-outline-info btn-sm btn-block mt-3">
                        {{#str}}viewvacancy, local_jobboard{{/str}}
                    </a>
                </div>
            </div>

            {{! Application Info Card }}
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fa fa-info-circle text-primary mr-2"></i>
                        {{#str}}applicationinfo, local_jobboard{{/str}}
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="mb-0">
                        <dt class="text-muted small">{{#str}}dateapplied, local_jobboard{{/str}}</dt>
                        <dd class="mb-2">{{application.dateapplied}}</dd>
                        <dt class="text-muted small">{{#str}}lastupdated, local_jobboard{{/str}}</dt>
                        <dd class="mb-0">{{application.lastupdated}}</dd>
                    </dl>
                </div>
            </div>

            {{! Workflow Actions (for managers) }}
            {{#canmanage}}
            <div class="card shadow-sm mb-4 border-warning">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="fa fa-cog mr-2"></i>
                        {{#str}}workflowactions, local_jobboard{{/str}}
                    </h5>
                </div>
                <div class="card-body">
                    <form method="post" action="{{workflowurl}}">
                        <input type="hidden" name="sesskey" value="{{sesskey}}">
                        <input type="hidden" name="applicationid" value="{{application.id}}">

                        <div class="form-group">
                            <label for="newstatus">{{#str}}changestatus, local_jobboard{{/str}}</label>
                            <select name="status" id="newstatus" class="form-control">
                                {{#workflowactions}}
                                <option value="{{value}}">{{label}}</option>
                                {{/workflowactions}}
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="notes">{{#str}}optionalnotes, local_jobboard{{/str}}</label>
                            <textarea name="notes" id="notes" class="form-control" rows="2"></textarea>
                        </div>

                        <button type="submit" class="btn btn-warning btn-block">
                            <i class="fa fa-save mr-1"></i>
                            {{#str}}updatestatus, local_jobboard{{/str}}
                        </button>
                    </form>
                </div>
            </div>
            {{/canmanage}}
        </div>
    </div>
</div>
