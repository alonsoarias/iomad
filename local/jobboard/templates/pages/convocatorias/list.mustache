{{!
    @template local_jobboard/pages/convocatorias

    Convocatorias list page template with enhanced UX.
    Admin interface for managing convocatorias (job posting campaigns).
    Uses jb-* CSS classes for consistent styling.

    Context variables:
    * dashboardurl - URL to dashboard
    * createurl - URL to create new convocatoria
    * importurl - URL to import vacancies
    * cancreate - Boolean if can create
    * helptext - Help text message
    * stats - Statistics cards array
    * filterform - Filter form data
    * showinginfo - Showing X-Y of Z text
    * hasconvocatorias - Boolean
    * convocatorias - Array of convocatoria data
    * pagination - Pagination HTML
    * loading - Show skeleton loading state

    Example context (json):
    {
        "hasconvocatorias": true,
        "convocatorias": [{"id": 1, "name": "Call 2025", "code": "CONV-2025-001"}]
    }
}}
{{#loading}}
{{! Skeleton Loading State }}
<div class="local-jobboard-convocatorias" aria-busy="true" aria-label="{{#str}}loading{{/str}}">
    <div class="jb-page-header jb-mb-4">
        <div class="jb-skeleton-text" style="width: 200px; height: 1em;"></div>
        <div class="jb-d-flex jb-justify-content-between jb-align-items-center jb-mt-3">
            <div class="jb-skeleton-title" style="width: 45%;"></div>
            <div class="jb-skeleton-text" style="width: 180px; height: 40px;"></div>
        </div>
    </div>
    <div class="jb-row jb-mb-4">
        <div class="jb-col-lg-3 jb-col-md-6 jb-mb-3">
            {{> local_jobboard/components/stat_card }}
        </div>
        <div class="jb-col-lg-3 jb-col-md-6 jb-mb-3">
            {{> local_jobboard/components/stat_card }}
        </div>
        <div class="jb-col-lg-3 jb-col-md-6 jb-mb-3">
            {{> local_jobboard/components/stat_card }}
        </div>
        <div class="jb-col-lg-3 jb-col-md-6 jb-mb-3">
            {{> local_jobboard/components/stat_card }}
        </div>
    </div>
    <div class="jb-row">
        <div class="jb-col-lg-6 jb-mb-4">
            <div class="jb-card jb-card-shadow">
                <div class="jb-card-header jb-bg-light"><div class="jb-skeleton-text" style="width: 50%;"></div></div>
                <div class="jb-card-body">
                    <div class="jb-skeleton-title" style="width: 70%;"></div>
                    <div class="jb-skeleton-text" style="width: 100%;"></div>
                    <div class="jb-skeleton-text" style="width: 60%;"></div>
                </div>
            </div>
        </div>
        <div class="jb-col-lg-6 jb-mb-4">
            <div class="jb-card jb-card-shadow">
                <div class="jb-card-header jb-bg-light"><div class="jb-skeleton-text" style="width: 50%;"></div></div>
                <div class="jb-card-body">
                    <div class="jb-skeleton-title" style="width: 70%;"></div>
                    <div class="jb-skeleton-text" style="width: 100%;"></div>
                    <div class="jb-skeleton-text" style="width: 60%;"></div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/loading}}

{{^loading}}
<div class="local-jobboard-convocatorias" data-region="jobboard-convocatorias">
    {{! Skip Link for Accessibility }}
    <a href="#convocatorias-main-content" class="jb-skip-link">
        {{#str}}skiptocontent, local_jobboard{{/str}}
    </a>

    {{! Page Header }}
    <header class="jb-page-header jb-mb-4 jb-fade-in">
        <nav aria-label="{{#str}}breadcrumb, local_jobboard{{/str}}" class="jb-mb-3">
            <ol class="jb-breadcrumb">
                <li class="jb-breadcrumb-item">
                    <a href="{{dashboardurl}}">{{#str}}dashboard, local_jobboard{{/str}}</a>
                </li>
                <li class="jb-breadcrumb-item jb-active" aria-current="page">
                    {{#str}}manageconvocatorias, local_jobboard{{/str}}
                </li>
            </ol>
        </nav>
        <div class="jb-d-flex jb-justify-content-between jb-align-items-center jb-flex-wrap jb-gap-2">
            <h1 class="jb-fs-4 jb-mb-0">
                <i class="fa fa-folder-open jb-text-primary jb-mr-2" aria-hidden="true"></i>
                {{#str}}manageconvocatorias, local_jobboard{{/str}}
            </h1>
            <div class="jb-btn-group" role="group" aria-label="{{#str}}convocatoriaactions, local_jobboard{{/str}}">
                <a href="{{importurl}}" class="jb-btn jb-btn-outline-secondary">
                    <i class="fa fa-file-csv jb-mr-1" aria-hidden="true"></i>
                    <span class="jb-d-none jb-d-md-inline">{{#str}}importvacancies, local_jobboard{{/str}}</span>
                    <span class="jb-d-md-none">{{#str}}import{{/str}}</span>
                </a>
                {{#cancreate}}
                <a href="{{createurl}}" class="jb-btn jb-btn-primary jb-hover-lift">
                    <i class="fa fa-plus jb-mr-1" aria-hidden="true"></i>
                    <span class="jb-d-none jb-d-md-inline">{{#str}}addconvocatoria, local_jobboard{{/str}}</span>
                    <span class="jb-d-md-none">{{#str}}add{{/str}}</span>
                </a>
                {{/cancreate}}
            </div>
        </div>
    </header>

    {{! Help Text }}
    {{#helptext}}
    <div class="jb-alert jb-alert-info jb-d-flex jb-align-items-start jb-mb-4 jb-fade-in-up" role="alert">
        <div class="jb-flex-shrink-0 jb-mr-3">
            <i class="fa fa-circle-info fa-lg jb-text-info" aria-hidden="true"></i>
        </div>
        <div class="jb-flex-grow-1">{{{helptext}}}</div>
    </div>
    {{/helptext}}

    {{! Statistics Row }}
    {{#stats.0}}
    <section class="jb-row jb-mb-4" role="region" aria-label="{{#str}}adminstatistics, local_jobboard{{/str}}">
        {{#stats}}
        <div class="jb-col-lg-3 jb-col-md-6 jb-mb-3 jb-fade-in-up" style="animation-delay: {{animdelay}}s;">
            {{> local_jobboard/components/stat_card }}
        </div>
        {{/stats}}
    </section>
    {{/stats.0}}

    {{! Filter Form }}
    {{#filterform}}
    <div class="jb-card jb-mb-4 jb-fade-in-up" style="animation-delay: 0.1s;">
        <div class="jb-card-body">
            <form method="get" action="{{filterform.action}}" class="jb-filter-form" role="search" aria-label="{{#str}}filterconvocatorias, local_jobboard{{/str}}">
                {{#filterform.hiddenfields}}
                <input type="hidden" name="{{name}}" value="{{value}}">
                {{/filterform.hiddenfields}}
                <div class="jb-row jb-align-items-end">
                    {{#filterform.fields}}
                    <div class="{{col}} jb-mb-2">
                        {{#isselect}}
                        <label for="filter-{{name}}" class="jb-form-label jb-small jb-text-muted">{{label}}</label>
                        <select name="{{name}}" id="filter-{{name}}" class="jb-form-select">
                            {{#options}}
                            <option value="{{value}}" {{#selected}}selected{{/selected}}>{{label}}</option>
                            {{/options}}
                        </select>
                        {{/isselect}}
                        {{#istext}}
                        <label for="filter-{{name}}" class="jb-form-label jb-small jb-text-muted">{{label}}</label>
                        <input type="text" name="{{name}}" id="filter-{{name}}" class="jb-form-control" value="{{value}}" placeholder="{{placeholder}}">
                        {{/istext}}
                    </div>
                    {{/filterform.fields}}
                    <div class="jb-col-auto jb-mb-2">
                        <button type="submit" class="jb-btn jb-btn-secondary">
                            <i class="fa fa-filter jb-mr-1" aria-hidden="true"></i>
                            {{#str}}filter, local_jobboard{{/str}}
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    {{/filterform}}

    {{! Results Info }}
    {{#showinginfo}}
    <p class="jb-text-muted jb-small jb-mb-3 jb-fade-in" role="status" aria-live="polite">
        <i class="fa fa-circle-info jb-mr-1" aria-hidden="true"></i>
        {{showinginfo}}
    </p>
    {{/showinginfo}}

    {{! Convocatorias List }}
    <div id="convocatorias-main-content">
        {{#hasconvocatorias}}
        <section class="jb-row" aria-label="{{#str}}convocatorias, local_jobboard{{/str}}">
            {{#convocatorias}}
            <div class="jb-col-lg-6 jb-mb-4">
                <article class="jb-card jb-card-h100 jb-card-shadow jb-convocatoria-card jb-hover-lift jb-fade-in-up"
                         data-convocatoria-id="{{id}}"
                         aria-labelledby="conv-title-{{id}}"
                         style="animation-delay: {{animdelay}}s;">
                    {{! Card Header }}
                    <div class="jb-card-header jb-bg-{{statuscolor}} jb-text-white">
                        <div class="jb-d-flex jb-justify-content-between jb-align-items-center">
                            <div class="jb-d-flex jb-align-items-center jb-gap-2">
                                <span class="jb-badge jb-badge-light">{{code}}</span>
                                <span class="jb-fw-bold">{{statuslabel}}</span>
                            </div>
                            {{#publicationtypelabel}}
                            <span class="jb-badge jb-badge-{{publicationtypecolor}}">
                                <i class="fa fa-{{publicationtypeicon}} jb-mr-1" aria-hidden="true"></i>
                                {{publicationtypelabel}}
                            </span>
                            {{/publicationtypelabel}}
                        </div>
                    </div>

                    {{! Card Body }}
                    <div class="jb-card-body">
                        <h2 class="jb-card-title jb-fs-5 jb-mb-2" id="conv-title-{{id}}">
                            <a href="{{editurl}}" class="jb-text-dark jb-text-decoration-none jb-hover-primary">
                                {{name}}
                            </a>
                        </h2>

                        {{#description}}
                        <p class="jb-text-muted jb-small jb-mb-3 jb-text-truncate-2">{{{description}}}</p>
                        {{/description}}

                        {{! Dates Row }}
                        <div class="jb-row jb-mb-3 jb-small">
                            <div class="jb-col-6">
                                <div class="jb-text-muted jb-mb-1">{{#str}}startdate, local_jobboard{{/str}}</div>
                                <div class="jb-d-flex jb-align-items-center">
                                    <i class="fa fa-calendar-days jb-text-success jb-mr-2" aria-hidden="true"></i>
                                    <span>{{startdateformatted}}</span>
                                </div>
                            </div>
                            <div class="jb-col-6">
                                <div class="jb-text-muted jb-mb-1">{{#str}}enddate, local_jobboard{{/str}}</div>
                                <div class="jb-d-flex jb-align-items-center {{#isending}}jb-text-warning{{/isending}}">
                                    <i class="fa fa-calendar-xmark jb-text-danger jb-mr-2" aria-hidden="true"></i>
                                    <span class="{{#isending}}jb-fw-bold{{/isending}}">{{enddateformatted}}</span>
                                </div>
                            </div>
                        </div>

                        {{! Stats Row }}
                        <div class="jb-d-flex jb-justify-content-around jb-text-center jb-py-3 jb-bg-light jb-rounded">
                            <div>
                                <div class="jb-fs-4 jb-fw-bold jb-text-primary">{{vacancycount}}</div>
                                <small class="jb-text-muted">{{#str}}vacancies, local_jobboard{{/str}}</small>
                            </div>
                            <div class="jb-border-left jb-border-right jb-px-3">
                                <div class="jb-fs-4 jb-fw-bold jb-text-info">{{applicationcount}}</div>
                                <small class="jb-text-muted">{{#str}}applications, local_jobboard{{/str}}</small>
                            </div>
                            <div>
                                <div class="jb-fs-4 jb-fw-bold jb-text-success">{{selectedcount}}</div>
                                <small class="jb-text-muted">{{#str}}appstatus:selected, local_jobboard{{/str}}</small>
                            </div>
                        </div>
                    </div>

                    {{! Card Footer }}
                    <footer class="jb-card-footer jb-bg-white">
                        <div class="jb-d-flex jb-justify-content-between jb-align-items-center">
                            {{! Quick Actions }}
                            <div class="jb-btn-group jb-btn-group-sm" role="group" aria-label="{{#str}}quickactions, local_jobboard{{/str}}">
                                <a href="{{editurl}}" class="jb-btn jb-btn-outline-primary" title="{{#str}}edit{{/str}}">
                                    <i class="fa fa-pen-to-square" aria-hidden="true"></i>
                                    <span class="jb-sr-only">{{#str}}edit{{/str}}</span>
                                </a>
                                {{#isdraft}}
                                <a href="{{addvacancyurl}}" class="jb-btn jb-btn-outline-success" title="{{#str}}addvacancy, local_jobboard{{/str}}">
                                    <i class="fa fa-plus" aria-hidden="true"></i>
                                    <span class="jb-sr-only">{{#str}}addvacancy, local_jobboard{{/str}}</span>
                                </a>
                                {{/isdraft}}
                                {{#hasvacancies}}
                                <a href="{{vacanciesurl}}" class="jb-btn jb-btn-outline-info" title="{{#str}}viewvacancies, local_jobboard{{/str}}">
                                    <i class="fa fa-briefcase" aria-hidden="true"></i>
                                    <span class="jb-badge jb-badge-info jb-ml-1">{{vacancycount}}</span>
                                    <span class="jb-sr-only">{{#str}}viewvacancies, local_jobboard{{/str}}</span>
                                </a>
                                {{/hasvacancies}}
                            </div>

                            {{! Status Actions Dropdown }}
                            {{#hasstatusactions}}
                            <div class="jb-dropdown">
                                <button class="jb-btn jb-btn-sm jb-btn-outline-{{statuscolor}} jb-dropdown-toggle"
                                        type="button"
                                        id="statusDropdown{{id}}"
                                        data-jb-toggle="dropdown"
                                        aria-expanded="false"
                                        aria-haspopup="true">
                                    <i class="fa fa-gear jb-mr-1" aria-hidden="true"></i>
                                    {{#str}}actions{{/str}}
                                </button>
                                <ul class="jb-dropdown-menu jb-dropdown-menu-right" aria-labelledby="statusDropdown{{id}}">
                                    {{#statusactions}}
                                    <li>
                                        <a href="{{url}}" class="jb-dropdown-item"
                                           {{#confirm}}onclick="return confirm('{{confirm}}');"{{/confirm}}
                                           {{#isdanger}}class="jb-dropdown-item jb-text-danger"{{/isdanger}}>
                                            <i class="fa fa-{{icon}} jb-mr-2" aria-hidden="true"></i>
                                            {{label}}
                                        </a>
                                    </li>
                                    {{/statusactions}}
                                </ul>
                            </div>
                            {{/hasstatusactions}}
                        </div>
                    </footer>
                </article>
            </div>
            {{/convocatorias}}
        </section>
        {{/hasconvocatorias}}

        {{! Empty State }}
        {{^hasconvocatorias}}
        <div class="jb-empty-state jb-text-center jb-py-5 jb-fade-in-up" role="status">
            <div class="jb-empty-icon-wrapper jb-d-inline-flex jb-align-items-center jb-justify-content-center jb-rounded-circle jb-bg-light jb-mb-4" style="width: 100px; height: 100px;">
                <i class="fa fa-folder-open fa-3x jb-text-muted" aria-hidden="true"></i>
            </div>
            <h2 class="jb-fs-4 jb-text-muted jb-mb-2">{{#str}}noconvocatorias, local_jobboard{{/str}}</h2>
            <p class="jb-text-muted jb-mb-4 jb-mx-auto" style="max-width: 400px;">{{#str}}noconvocatoriasdesc, local_jobboard{{/str}}</p>
            {{#cancreate}}
            <a href="{{createurl}}" class="jb-btn jb-btn-primary jb-btn-lg jb-hover-lift">
                <i class="fa fa-plus jb-mr-2" aria-hidden="true"></i>
                {{#str}}addconvocatoria, local_jobboard{{/str}}
            </a>
            {{/cancreate}}
        </div>
        {{/hasconvocatorias}}
    </div>

    {{! Pagination }}
    {{#pagination}}
    <nav class="jb-mt-4 jb-fade-in" aria-label="{{#str}}pagination, local_jobboard{{/str}}">
        {{{pagination}}}
    </nav>
    {{/pagination}}

    {{! Navigation Footer }}
    <nav class="jb-navigation-footer jb-d-flex jb-justify-content-between jb-align-items-center jb-mt-4 jb-py-3 jb-border-top jb-fade-in" aria-label="{{#str}}pagenavigation, local_jobboard{{/str}}">
        <a href="{{dashboardurl}}" class="jb-btn jb-btn-outline-secondary">
            <i class="fa fa-arrow-left jb-mr-2" aria-hidden="true"></i>
            {{#str}}backtodashboard, local_jobboard{{/str}}
        </a>
        {{#reportsurl}}
        <a href="{{reportsurl}}" class="jb-btn jb-btn-link jb-text-muted">
            {{#str}}viewreports, local_jobboard{{/str}}
            <i class="fa fa-chart-bar jb-ml-2" aria-hidden="true"></i>
        </a>
        {{/reportsurl}}
    </nav>
</div>
{{/loading}}
