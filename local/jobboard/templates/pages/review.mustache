{{!
    @template local_jobboard/pages/review

    Document review page template.

    Context variables:
    * pageheader - Page header data
    * stats - Review queue stats
    * filterform - Filter form data
    * hasapplications - Boolean
    * applications - Array of applications pending review
    * selectedapplication - Selected application for review (if any)
    * documents - Documents to review
    * pagination - Pagination HTML

    Example context (json):
    {
        "hasapplications": true,
        "applications": [{"id": 1, "applicantname": "John Doe"}]
    }
}}
<div class="local-jobboard-review" data-region="jobboard-review">
    {{! Page Header }}
    {{> local_jobboard/components/page_header }}

    {{! Statistics Row }}
    {{#stats.0}}
    <section class="row mb-4" role="region" aria-label="{{#str}}reviewstatistics, local_jobboard{{/str}}">
        {{#stats}}
        <div class="col-lg-3 col-md-6 mb-3">
            {{> local_jobboard/components/stat_card }}
        </div>
        {{/stats}}
    </section>
    {{/stats.0}}

    {{! Review Single Application }}
    {{#selectedapplication}}
    <div class="row">
        {{! Documents Column }}
        <main class="col-lg-8">
            {{! Documents Card }}
            <section class="card shadow-sm mb-4" aria-labelledby="documents-review-heading">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h2 class="h5 mb-0" id="documents-review-heading">
                        <i class="fa fa-folder-open mr-2" aria-hidden="true"></i>
                        {{#str}}documentlist, local_jobboard{{/str}}
                    </h2>
                    {{#canvalidateall}}
                    <a href="{{validateallurl}}" class="btn btn-success btn-sm">
                        <i class="fa fa-check-double mr-1" aria-hidden="true"></i>
                        {{#str}}validateall, local_jobboard{{/str}}
                    </a>
                    {{/canvalidateall}}
                </div>

                {{#hasdocuments}}
                <ul class="list-group list-group-flush" role="list" aria-label="{{#str}}documentstoreview, local_jobboard{{/str}}">
                    {{#documents}}
                    <li class="list-group-item" data-document-id="{{id}}" role="listitem">
                        <div class="d-flex justify-content-between align-items-start">
                            {{! Document Info }}
                            <div class="d-flex align-items-center flex-grow-1">
                                <div class="mr-3" aria-hidden="true">
                                    <i class="fa fa-{{statusicon}} fa-lg text-{{statuscolor}}"></i>
                                </div>
                                <div>
                                    <h3 class="h6 mb-0">{{typename}}</h3>
                                    <small class="text-muted">{{filename}}</small>
                                    <div>
                                        <span class="badge badge-{{statuscolor}}" aria-label="{{#str}}status, local_jobboard{{/str}}: {{statuslabel}}">
                                            {{statuslabel}}
                                        </span>
                                    </div>
                                    {{#reviewedby}}
                                    <small class="text-muted">
                                        <i class="fa fa-user-check mr-1" aria-hidden="true"></i>
                                        {{#str}}reviewedby, local_jobboard{{/str}}: {{reviewedby}} - {{reviewedat}}
                                    </small>
                                    {{/reviewedby}}
                                    {{#rejectreason}}
                                    <div class="text-danger small mt-1" role="alert">
                                        <i class="fa fa-exclamation-circle mr-1" aria-hidden="true"></i>
                                        {{rejectreason}}
                                    </div>
                                    {{/rejectreason}}
                                </div>
                            </div>

                            {{! Actions }}
                            <div class="btn-group-vertical ml-3" role="group" aria-label="{{#str}}documentactions, local_jobboard{{/str}}">
                                {{#downloadurl}}
                                <a href="{{downloadurl}}" class="btn btn-sm btn-outline-primary" target="_blank" rel="noopener noreferrer" aria-label="{{#str}}download{{/str}} {{typename}}">
                                    <i class="fa fa-download" aria-hidden="true"></i>
                                    <span class="sr-only">{{#str}}download{{/str}}</span>
                                </a>
                                {{/downloadurl}}

                                {{#ispending}}
                                <a href="{{validateurl}}" class="btn btn-sm btn-success" aria-label="{{#str}}approve, local_jobboard{{/str}} {{typename}}">
                                    <i class="fa fa-check" aria-hidden="true"></i>
                                    <span class="sr-only">{{#str}}approve, local_jobboard{{/str}}</span>
                                </a>
                                <button type="button" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#rejectModal{{id}}" aria-label="{{#str}}reject, local_jobboard{{/str}} {{typename}}">
                                    <i class="fa fa-times" aria-hidden="true"></i>
                                    <span class="sr-only">{{#str}}reject, local_jobboard{{/str}}</span>
                                </button>
                                {{/ispending}}
                            </div>
                        </div>
                    </li>

                    {{! Reject Modal }}
                    {{#ispending}}
                    <div class="modal fade" id="rejectModal{{id}}" tabindex="-1" role="dialog" aria-labelledby="rejectModalLabel{{id}}" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <form method="post" action="{{rejecturl}}">
                                    <input type="hidden" name="sesskey" value="{{sesskey}}">
                                    <div class="modal-header bg-danger text-white">
                                        <h4 class="modal-title h5" id="rejectModalLabel{{id}}">
                                            <i class="fa fa-exclamation-triangle mr-2" aria-hidden="true"></i>
                                            {{#str}}rejectdocument, local_jobboard{{/str}}
                                        </h4>
                                        <button type="button" class="close text-white" data-dismiss="modal" aria-label="{{#str}}close, local_jobboard{{/str}}">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <p class="text-muted">{{typename}}</p>
                                        <div class="form-group">
                                            <label for="reason{{id}}" class="font-weight-bold">
                                                {{#str}}rejectreason, local_jobboard{{/str}} <span class="text-danger">*</span>
                                            </label>
                                            <textarea name="reason" id="reason{{id}}" class="form-control" rows="3" required aria-required="true"
                                                placeholder="{{#str}}rejectreason_placeholder, local_jobboard{{/str}}"></textarea>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">
                                            {{#str}}cancel{{/str}}
                                        </button>
                                        <button type="submit" class="btn btn-danger">
                                            <i class="fa fa-times mr-1" aria-hidden="true"></i>
                                            {{#str}}reject, local_jobboard{{/str}}
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    {{/ispending}}
                    {{/documents}}
                </ul>
                {{/hasdocuments}}

                {{^hasdocuments}}
                <div class="card-body text-center text-muted py-4" role="status">
                    <i class="fa fa-file fa-2x mb-2" aria-hidden="true"></i>
                    <p class="mb-0">{{#str}}nodocumentstoreview, local_jobboard{{/str}}</p>
                </div>
                {{/hasdocuments}}
            </section>
        </main>

        {{! Sidebar }}
        <aside class="col-lg-4">
            {{! Applicant Info }}
            <section class="card shadow-sm mb-4" aria-labelledby="applicant-heading">
                <div class="card-header bg-secondary text-white">
                    <h2 class="h5 mb-0" id="applicant-heading">
                        <i class="fa fa-user mr-2" aria-hidden="true"></i>
                        {{#str}}applicantinfo, local_jobboard{{/str}}
                    </h2>
                </div>
                <div class="card-body">
                    <h3 class="h5">{{selectedapplication.applicantname}}</h3>
                    <p class="mb-2">
                        <i class="fa fa-envelope text-muted mr-2" aria-hidden="true"></i>
                        <a href="mailto:{{selectedapplication.email}}">{{selectedapplication.email}}</a>
                    </p>
                    <small class="text-muted">
                        <i class="fa fa-calendar-alt mr-1" aria-hidden="true"></i>
                        {{#str}}dateapplied, local_jobboard{{/str}}: {{selectedapplication.dateapplied}}
                    </small>
                </div>
            </section>

            {{! Vacancy Info }}
            <section class="card shadow-sm mb-4" aria-labelledby="vacancy-heading">
                <div class="card-header bg-info text-white">
                    <h2 class="h5 mb-0" id="vacancy-heading">
                        <i class="fa fa-briefcase mr-2" aria-hidden="true"></i>
                        {{#str}}vacancy, local_jobboard{{/str}}
                    </h2>
                </div>
                <div class="card-body">
                    <span class="badge badge-secondary mb-2" aria-label="{{#str}}vacancycode, local_jobboard{{/str}}: {{selectedapplication.vacancycode}}">{{selectedapplication.vacancycode}}</span>
                    <h3 class="h5">{{selectedapplication.vacancytitle}}</h3>
                    <span class="badge badge-{{selectedapplication.statuscolor}}">{{selectedapplication.statuslabel}}</span>
                </div>
            </section>

            {{! Review Progress }}
            <section class="card shadow-sm mb-4 border-primary" aria-labelledby="progress-heading">
                <div class="card-header bg-primary text-white">
                    <h2 class="h5 mb-0" id="progress-heading">
                        <i class="fa fa-tasks mr-2" aria-hidden="true"></i>
                        {{#str}}reviewprogress, local_jobboard{{/str}}
                    </h2>
                </div>
                <div class="card-body">
                    <div class="progress mb-3" style="height: 25px;" role="progressbar" aria-label="{{#str}}reviewprogress, local_jobboard{{/str}}">
                        <div class="progress-bar bg-success" style="width: {{approvedpercent}}%;" aria-label="{{approvedcount}} {{#str}}docstatus:approved, local_jobboard{{/str}}">{{approvedcount}}</div>
                        <div class="progress-bar bg-danger" style="width: {{rejectedpercent}}%;" aria-label="{{rejectedcount}} {{#str}}docstatus:rejected, local_jobboard{{/str}}">{{rejectedcount}}</div>
                    </div>
                    <div class="small">
                        <span class="text-success mr-3"><i class="fa fa-check mr-1" aria-hidden="true"></i>{{approvedcount}} {{#str}}docstatus:approved, local_jobboard{{/str}}</span>
                        <span class="text-danger mr-3"><i class="fa fa-times mr-1" aria-hidden="true"></i>{{rejectedcount}} {{#str}}docstatus:rejected, local_jobboard{{/str}}</span>
                        <span class="text-warning"><i class="fa fa-clock mr-1" aria-hidden="true"></i>{{pendingcount}} {{#str}}docstatus:pending, local_jobboard{{/str}}</span>
                    </div>
                </div>

                {{#allreviewed}}
                <footer class="card-footer bg-white text-center">
                    <div class="text-success font-weight-bold mb-2" role="status">
                        <i class="fa fa-check-circle fa-2x mb-2" aria-hidden="true"></i><br>
                        {{#str}}alldocsreviewed, local_jobboard{{/str}}
                    </div>
                    <a href="{{submitreviewurl}}" class="btn btn-success btn-lg btn-block">
                        <i class="fa fa-clipboard-check mr-2" aria-hidden="true"></i>
                        {{#str}}submitreview, local_jobboard{{/str}}
                    </a>
                </footer>
                {{/allreviewed}}
            </section>
        </aside>
    </div>
    {{/selectedapplication}}

    {{! Applications Queue (when no application selected) }}
    {{^selectedapplication}}
    {{! Filter Form }}
    {{#filterform}}
    {{> local_jobboard/components/filter_form }}
    {{/filterform}}

    {{! Applications List }}
    {{#hasapplications}}
    <section class="row" aria-label="{{#str}}applicationsqueue, local_jobboard{{/str}}">
        {{#applications}}
        <div class="col-lg-6 mb-4">
            <article class="card h-100 shadow-sm{{#isurgent}} border-danger{{/isurgent}}" aria-labelledby="queue-app-{{id}}">
                <div class="card-header d-flex justify-content-between align-items-center
                     {{#haspendingdocs}}bg-warning{{/haspendingdocs}}{{^haspendingdocs}}bg-success{{/haspendingdocs}}">
                    <div>
                        <span class="badge badge-light mr-2">{{vacancycode}}</span>
                        <span class="text-white small">{{statuslabel}}</span>
                    </div>
                    {{#isurgent}}
                    <span class="badge badge-danger" role="status">
                        <i class="fa fa-exclamation-triangle mr-1" aria-hidden="true"></i>
                        {{#str}}urgent, local_jobboard{{/str}}
                    </span>
                    {{/isurgent}}
                </div>
                <div class="card-body">
                    <h2 class="card-title h5" id="queue-app-{{id}}">
                        <i class="fa fa-user text-muted mr-2" aria-hidden="true"></i>
                        {{applicantname}}
                    </h2>
                    <p class="small mb-2">
                        <i class="fa fa-envelope text-muted mr-2" aria-hidden="true"></i>
                        <a href="mailto:{{email}}" class="text-muted">{{email}}</a>
                    </p>
                    <div class="small text-muted mb-3">
                        <i class="fa fa-briefcase mr-2" aria-hidden="true"></i>
                        {{vacancytitle}}
                    </div>
                    <div class="d-flex align-items-center flex-wrap">
                        <span class="mr-2">
                            <i class="fa fa-file-alt mr-1" aria-hidden="true"></i>
                            {{#str}}documents, local_jobboard{{/str}}:
                        </span>
                        <span class="badge badge-secondary mr-2">{{doccount}}</span>
                        {{#pendingcount}}
                        <span class="badge badge-warning" aria-label="{{pendingcount}} {{#str}}pending, local_jobboard{{/str}}">
                            {{pendingcount}} {{#str}}pending, local_jobboard{{/str}}
                        </span>
                        {{/pendingcount}}
                        {{^pendingcount}}
                        <span class="badge badge-success">{{#str}}allvalidated, local_jobboard{{/str}}</span>
                        {{/pendingcount}}
                    </div>
                    <div class="small text-muted mt-2">
                        <i class="fa fa-calendar-alt mr-2" aria-hidden="true"></i>
                        {{#str}}datesubmitted, local_jobboard{{/str}}: {{datesubmitted}}
                    </div>
                </div>
                <footer class="card-footer bg-white d-flex justify-content-between">
                    <a href="{{reviewurl}}" class="btn btn-primary btn-sm" aria-label="{{#str}}reviewdocuments, local_jobboard{{/str}}: {{applicantname}}">
                        <i class="fa fa-search mr-1" aria-hidden="true"></i>
                        {{#str}}reviewdocuments, local_jobboard{{/str}}
                    </a>
                    <a href="{{viewurl}}" class="btn btn-outline-secondary btn-sm" aria-label="{{#str}}viewapplication, local_jobboard{{/str}}: {{applicantname}}">
                        <i class="fa fa-eye" aria-hidden="true"></i>
                        <span class="sr-only">{{#str}}viewapplication, local_jobboard{{/str}}</span>
                    </a>
                </footer>
            </article>
        </div>
        {{/applications}}
    </section>
    {{/hasapplications}}

    {{! Empty State }}
    {{^hasapplications}}
    <div class="jb-empty-state text-center py-5" role="status" aria-live="polite">
        <div aria-hidden="true">
            <i class="fa fa-check-circle fa-4x text-success mb-3"></i>
        </div>
        <h2 class="h4 text-muted">{{#str}}nodocumentstoreview, local_jobboard{{/str}}</h2>
    </div>
    {{/hasapplications}}

    {{! Pagination }}
    {{#pagination}}
    <nav class="mt-4" aria-label="{{#str}}pagination, local_jobboard{{/str}}">
        {{{pagination}}}
    </nav>
    {{/pagination}}
    {{/selectedapplication}}
</div>
