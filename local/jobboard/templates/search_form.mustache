{{!
    @template local_jobboard/search_form

    Search form component.

    Context variables:
    * searchvalue - Current search value
    * actionurl - Form action URL
    * placeholder - Placeholder text
}}
<form action="{{actionurl}}" method="get" class="jb-search-form">
    <div class="jb-input-group">
        <input type="text" name="search" value="{{searchvalue}}" class="jb-form-control" placeholder="{{placeholder}}" aria-label="{{#str}}searchjobs, local_jobboard{{/str}}">
        <div class="jb-input-group-append">
            <button type="submit" class="jb-btn jb-btn-primary">
                <i class="fa fa-search" aria-hidden="true"></i>
                <span class="jb-sr-only">{{#str}}search, local_jobboard{{/str}}</span>
            </button>
        </div>
    </div>
</form>
