{{!
    @template local_jobboard/report_filter_form

    Report filter form component.

    Context variables:
    * actionurl - Form action URL
    * reporttype - Report type identifier
    * datefrom - Date from value
    * dateto - Date to value
    * convocatorias - Convocatoria options array
    * hasconvocatorias - Boolean
    * status - Selected status
    * statusoptions - Status options array
}}
<div class="jb-report-filters jb-card jb-mb-4">
    <div class="jb-card-header">
        <h5 class="jb-mb-0">{{#str}}filterreport, local_jobboard{{/str}}</h5>
    </div>
    <div class="jb-card-body">
        <form action="{{actionurl}}" method="get" class="jb-form-inline">
            <input type="hidden" name="report" value="{{reporttype}}">

            <div class="jb-form-group jb-mr-3 jb-mb-2">
                <label for="filter-datefrom" class="jb-mr-2">{{#str}}from, local_jobboard{{/str}}</label>
                <input type="date" name="datefrom" id="filter-datefrom" value="{{datefrom}}" class="jb-form-control">
            </div>

            <div class="jb-form-group jb-mr-3 jb-mb-2">
                <label for="filter-dateto" class="jb-mr-2">{{#str}}to, local_jobboard{{/str}}</label>
                <input type="date" name="dateto" id="filter-dateto" value="{{dateto}}" class="jb-form-control">
            </div>

            {{#hasconvocatorias}}
            <div class="jb-form-group jb-mr-3 jb-mb-2">
                <label for="filter-convocatoria" class="jb-mr-2">{{#str}}convocatoria, local_jobboard{{/str}}</label>
                <select name="convocatoriaid" id="filter-convocatoria" class="jb-form-control jb-custom-select">
                    <option value="">{{#str}}all, local_jobboard{{/str}}</option>
                    {{#convocatorias}}
                    <option value="{{value}}"{{#selected}} selected{{/selected}}>{{label}}</option>
                    {{/convocatorias}}
                </select>
            </div>
            {{/hasconvocatorias}}

            {{#statusoptions}}
            <div class="jb-form-group jb-mr-3 jb-mb-2">
                <label for="filter-status" class="jb-mr-2">{{#str}}status, local_jobboard{{/str}}</label>
                <select name="status" id="filter-status" class="jb-form-control jb-custom-select">
                    <option value="">{{#str}}all, local_jobboard{{/str}}</option>
                    {{#statusoptions}}
                    <option value="{{value}}"{{#selected}} selected{{/selected}}>{{label}}</option>
                    {{/statusoptions}}
                </select>
            </div>
            {{/statusoptions}}

            <button type="submit" class="jb-btn jb-btn-primary jb-mb-2">
                <i class="fa fa-filter jb-mr-1" aria-hidden="true"></i>
                {{#str}}applyfilters, local_jobboard{{/str}}
            </button>
        </form>
    </div>
</div>
