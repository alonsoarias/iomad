{{!
    @template local_jobboard/components/data_table

    Reusable data table component.

    Context variables:
    * headers - Array of header objects with label, class
    * rows - Array of row arrays
    * hasdata - Boolean if has data
    * emptytext - Text to show when empty
    * striped - Boolean for striped rows
    * hover - Boolean for hover effect
    * responsive - Boolean for responsive wrapper

    Example context (json):
    {
        "headers": [{"label": "Name"}, {"label": "Status", "class": "text-center"}],
        "rows": [["John Doe", "<span class='badge badge-success'>Active</span>"]],
        "hasdata": true
    }
}}
{{#responsive}}
<div class="table-responsive" tabindex="0" role="region" aria-label="{{#tablecaption}}{{tablecaption}}{{/tablecaption}}{{^tablecaption}}{{#str}}datatable, local_jobboard{{/str}}{{/tablecaption}}">
{{/responsive}}
<table class="table jb-data-table{{#striped}} table-striped{{/striped}}{{#hover}} table-hover{{/hover}} mb-0">
    {{#tablecaption}}
    <caption class="sr-only">{{tablecaption}}</caption>
    {{/tablecaption}}
    <thead class="thead-light">
        <tr>
            {{#headers}}
            <th scope="col"{{#class}} class="{{class}}"{{/class}}>{{label}}</th>
            {{/headers}}
        </tr>
    </thead>
    <tbody>
        {{#hasdata}}
        {{#rows}}
        <tr>
            {{#cells}}
            <td{{#class}} class="{{class}}"{{/class}}{{#isheader}} scope="row"{{/isheader}}>{{{content}}}</td>
            {{/cells}}
        </tr>
        {{/rows}}
        {{/hasdata}}
        {{^hasdata}}
        <tr>
            <td colspan="{{headercount}}" class="text-center text-muted py-4" role="status">
                {{#emptytext}}{{emptytext}}{{/emptytext}}
                {{^emptytext}}{{#str}}nodata, local_jobboard{{/str}}{{/emptytext}}
            </td>
        </tr>
        {{/hasdata}}
    </tbody>
</table>
{{#responsive}}
</div>
{{/responsive}}
