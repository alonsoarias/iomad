{{!
    @template local_jobboard/components/empty_state

    Empty state component for when no data is available.
    Enhanced with better visual hierarchy and optional illustrations.

    Context variables:
    * icon (string) - FontAwesome icon name (default: folder-open)
    * title (string) - Main message
    * description (string) - Optional secondary message
    * action (object) - Optional primary action button {url, label, color, icon}
    * secondaryaction (object) - Optional secondary action {url, label}
    * compact (bool) - Use compact variant with less padding
    * animate (bool) - Enable entrance animation
    * variant (string) - Visual variant: default, minimal, illustrated

    Example context (json):
    {
        "icon": "folder-open",
        "title": "No items found",
        "description": "Try adjusting your filters or create a new item",
        "action": {"url": "/create", "label": "Create New", "color": "primary", "icon": "plus"},
        "secondaryaction": {"url": "/help", "label": "Learn more"},
        "animate": true
    }
}}
<div class="jb-empty-state jb-text-center{{#compact}} jb-py-3{{/compact}}{{^compact}} jb-py-5{{/compact}}{{#animate}} jb-fade-in-up{{/animate}}"
     role="status"
     aria-live="polite"
     {{#variant}}data-variant="{{variant}}"{{/variant}}>

    {{! Icon with visual enhancement }}
    <div class="jb-empty-state-icon jb-mb-4">
        <div class="jb-empty-icon-wrapper jb-d-inline-flex jb-align-items-center jb-justify-content-center jb-rounded-circle jb-bg-light"
             style="width: 100px; height: 100px;">
            <i class="fa fa-{{#icon}}{{icon}}{{/icon}}{{^icon}}folder-open{{/icon}} fa-3x jb-text-muted" aria-hidden="true"></i>
        </div>
    </div>

    {{! Title }}
    <h3 class="jb-fs-5 jb-fw-medium jb-text-dark jb-mb-2">{{title}}</h3>

    {{! Description }}
    {{#description}}
    <p class="jb-text-muted jb-mb-4 jb-mx-auto" style="max-width: 400px;">{{description}}</p>
    {{/description}}

    {{! Actions }}
    {{#action}}
    <div class="jb-empty-state-actions jb-d-flex jb-flex-column jb-flex-sm-row jb-justify-content-center jb-align-items-center jb-gap-2">
        <a href="{{url}}" class="jb-btn jb-btn-{{#color}}{{color}}{{/color}}{{^color}}primary{{/color}}">
            {{#icon}}<i class="fa fa-{{icon}} jb-mr-2" aria-hidden="true"></i>{{/icon}}
            {{label}}
        </a>
        {{#secondaryaction}}
        <a href="{{url}}" class="jb-btn jb-btn-link jb-text-muted">
            {{label}}
        </a>
        {{/secondaryaction}}
    </div>
    {{/action}}

    {{^action}}
    {{#secondaryaction}}
    <div class="jb-empty-state-actions">
        <a href="{{url}}" class="jb-btn jb-btn-outline-secondary">
            {{label}}
        </a>
    </div>
    {{/secondaryaction}}
    {{/action}}
</div>
