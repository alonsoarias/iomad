{{!
    @template local_jobboard/components/breadcrumb

    Breadcrumb navigation component.

    Context variables:
    * breadcrumbs (array) - Array of breadcrumb items {label, url, active}
    * items (array) - Fallback: Array of breadcrumb items {label, url, active}

    Example context (json):
    {
        "breadcrumbs": [
            {"label": "Dashboard", "url": "/dashboard"},
            {"label": "Vacancies", "url": "/vacancies"},
            {"label": "Detail", "active": true}
        ]
    }
}}
<nav aria-label="{{#str}}breadcrumb{{/str}}" class="jb-mb-3">
    <ol class="jb-breadcrumb">
        {{#breadcrumbs}}
        <li class="jb-breadcrumb-item{{#active}} jb-active{{/active}}"{{#active}} aria-current="page"{{/active}}>
            {{#url}}<a href="{{url}}">{{/url}}{{label}}{{#url}}</a>{{/url}}
        </li>
        {{/breadcrumbs}}
        {{#items}}
        <li class="jb-breadcrumb-item{{#active}} jb-active{{/active}}"{{#active}} aria-current="page"{{/active}}>
            {{#url}}<a href="{{url}}">{{/url}}{{label}}{{#url}}</a>{{/url}}
        </li>
        {{/items}}
    </ol>
</nav>
