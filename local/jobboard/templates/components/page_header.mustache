{{!
    @template local_jobboard/components/page_header

    Page header component with action buttons ONLY.

    NOTE: Page title is handled by Moodle's $PAGE->set_heading().
    NOTE: Breadcrumbs are handled by Moodle's native $PAGE->navbar.
    This template ONLY renders action buttons to avoid duplication.

    Context variables:
    * actions - Array of action buttons [{url, label, icon, class, primary}]
    * showback - Boolean to show back button
    * backurl - URL for back button

    Example context (json):
    {
        "actions": [{"url": "/create", "label": "Create", "icon": "plus", "primary": true}],
        "showback": true,
        "backurl": "/dashboard"
    }
}}
{{! Only render if there are actions or back button }}
{{#actions.0}}
<div class="jb-page-header d-flex justify-content-end mb-4">
    {{#showback}}
    <a href="{{backurl}}" class="btn btn-outline-secondary mr-2">
        {{#pix}}i/return, core, {{#str}}back{{/str}}{{/pix}}
        {{#str}}back{{/str}}
    </a>
    {{/showback}}

    <div class="btn-group flex-wrap">
        {{#actions}}
        <a href="{{url}}" class="btn {{#primary}}btn-primary{{/primary}}{{^primary}}btn-outline-secondary{{/primary}} {{class}}">
            {{#icon}}
            <i class="fa fa-{{icon}} mr-1"></i>
            {{/icon}}
            {{label}}
        </a>
        {{/actions}}
    </div>
</div>
{{/actions.0}}
{{^actions.0}}
{{#showback}}
<div class="jb-page-header d-flex justify-content-start mb-4">
    <a href="{{backurl}}" class="btn btn-outline-secondary">
        {{#pix}}i/return, core, {{#str}}back{{/str}}{{/pix}}
        {{#str}}back{{/str}}
    </a>
</div>
{{/showback}}
{{/actions.0}}
