{{!
    @template local_jobboard/components/list_group

    List group component for displaying lists of items.

    Context variables:
    * title - Optional card header title
    * icon - Optional header icon
    * headercolor - Header background color
    * items - Array of list items with:
        - title: Item title
        - subtitle: Optional subtitle
        - badge: Optional badge {label, color}
        - icon: Optional icon
        - iconcolor: Icon color
        - url: Optional link URL
        - actions: Array of action buttons [{url, icon, label, class, title}]
        - meta: Optional meta text (right side)
        - active: Boolean for active state
        - disabled: Boolean for disabled state
    * flush - Boolean for flush style (no outer borders)
    * empty - Empty state message

    Example context (json):
    {
        "title": "Documents",
        "icon": "folder",
        "headercolor": "primary",
        "items": [
            {
                "title": "Resume.pdf",
                "subtitle": "Uploaded 2 days ago",
                "badge": {"label": "Approved", "color": "success"},
                "icon": "file-pdf",
                "iconcolor": "danger",
                "actions": [{"url": "/download", "icon": "download", "title": "Download"}]
            }
        ]
    }
}}
<div class="jb-card jb-shadow-sm jb-mb-4 jb-list-group">
    {{#title}}
    <div class="jb-card-header {{#headercolor}}jb-bg-{{headercolor}} jb-text-white{{/headercolor}} jb-d-flex jb-justify-content-between jb-align-items-center">
        <h5 class="jb-mb-0">
            {{#icon}}
            <i class="fa fa-{{icon}} jb-mr-2"></i>
            {{/icon}}
            {{title}}
        </h5>
        {{#count}}
        <span class="jb-badge jb-badge-light">{{count}}</span>
        {{/count}}
    </div>
    {{/title}}

    {{#items.0}}
    <ul class="jb-list-group-items jb-list-group-flush">
        {{#items}}
        <li class="jb-list-group-item{{#active}} jb-active{{/active}}{{#disabled}} jb-disabled{{/disabled}} jb-d-flex jb-justify-content-between jb-align-items-center">
            <div class="jb-d-flex jb-align-items-center jb-flex-grow-1">
                {{#icon}}
                <div class="jb-mr-3">
                    <i class="fa fa-{{icon}} fa-lg jb-text-{{#iconcolor}}{{iconcolor}}{{/iconcolor}}{{^iconcolor}}muted{{/iconcolor}}"></i>
                </div>
                {{/icon}}
                <div class="jb-flex-grow-1">
                    {{#url}}
                    <a href="{{url}}" class="jb-text-dark jb-fw-bold jb-text-decoration-none">{{title}}</a>
                    {{/url}}
                    {{^url}}
                    <span class="jb-fw-bold">{{title}}</span>
                    {{/url}}
                    {{#subtitle}}
                    <div class="jb-text-muted jb-fs-sm">{{subtitle}}</div>
                    {{/subtitle}}
                </div>
            </div>

            <div class="jb-d-flex jb-align-items-center">
                {{#badge}}
                <span class="jb-badge jb-badge-{{color}} jb-mr-2">{{label}}</span>
                {{/badge}}

                {{#meta}}
                <small class="jb-text-muted jb-mr-2">{{meta}}</small>
                {{/meta}}

                {{#actions.0}}
                <div class="jb-btn-group jb-btn-group-sm">
                    {{#actions}}
                    <a href="{{url}}" class="jb-btn {{#class}}{{class}}{{/class}}{{^class}}jb-btn-outline-secondary{{/class}}" title="{{title}}">
                        {{#icon}}
                        <i class="fa fa-{{icon}}"></i>
                        {{/icon}}
                        {{#label}}{{label}}{{/label}}
                    </a>
                    {{/actions}}
                </div>
                {{/actions.0}}
            </div>
        </li>
        {{/items}}
    </ul>
    {{/items.0}}

    {{^items.0}}
    <div class="jb-card-body jb-text-center jb-text-muted jb-py-4">
        <i class="fa fa-inbox fa-2x jb-mb-2"></i>
        <p class="jb-mb-0">{{#empty}}{{empty}}{{/empty}}{{^empty}}{{#str}}noresults{{/str}}{{/empty}}</p>
    </div>
    {{/items.0}}
</div>
