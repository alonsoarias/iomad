{{!
    @template local_jobboard/components/stat_card

    Statistics card component.

    Context variables:
    * value - The main value to display
    * label - Description label
    * icon - FontAwesome icon name (without fa- prefix)
    * color - Color variant (primary, success, warning, danger, info, secondary)
    * url - Optional link URL
    * trend - Optional trend indicator (up, down, stable)
    * trendvalue - Optional trend value text

    Example context (json):
    {
        "value": "42",
        "label": "Active Vacancies",
        "icon": "briefcase",
        "color": "primary",
        "url": "/vacancies",
        "trend": "up",
        "trendvalue": "+5 this week"
    }
}}
<div class="jb-stat-card jb-stat-card-{{color}}" role="region" aria-label="{{label}}: {{value}}">
    {{#url}}
    <a href="{{url}}" class="jb-text-decoration-none" aria-label="{{label}}: {{value}}. {{#str}}clickfordetails, local_jobboard{{/str}}">
    {{/url}}
        <div class="jb-stat-card-body jb-py-3">
            <div class="jb-stat-card-content">
                <div>
                    <h3 class="jb-stat-card-value jb-text-{{color}}" aria-hidden="true">{{value}}</h3>
                    <p class="jb-stat-card-label">{{label}}</p>
                    {{#trendvalue}}
                    <small class="jb-stat-card-trend jb-text-{{#trend}}{{trend}}{{/trend}}{{^trend}}muted{{/trend}}">
                        {{#trend}}
                        {{#isUp}}<i class="fa fa-arrow-up" aria-hidden="true"></i><span class="jb-sr-only">{{#str}}trending_up, local_jobboard{{/str}}</span>{{/isUp}}
                        {{#isDown}}<i class="fa fa-arrow-down" aria-hidden="true"></i><span class="jb-sr-only">{{#str}}trending_down, local_jobboard{{/str}}</span>{{/isDown}}
                        {{/trend}}
                        <span class="jb-trend-text">{{trendvalue}}</span>
                    </small>
                    {{/trendvalue}}
                </div>
                <div class="jb-stat-card-icon jb-text-{{color}}" aria-hidden="true">
                    <i class="fa fa-{{icon}} fa-2x"></i>
                </div>
            </div>
        </div>
    {{#url}}
    </a>
    {{/url}}
</div>
