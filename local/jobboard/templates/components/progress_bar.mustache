{{!
    @template local_jobboard/components/progress_bar

    Progress bar component.

    Context variables:
    * percent - Percentage complete (0-100)
    * color - Bootstrap color (primary, success, warning, danger, info)
    * label - Optional label text inside bar
    * showpercent - Boolean to show percentage
    * height - Optional height in pixels
    * striped - Boolean for striped style
    * animated - Boolean for animation
    * segments - Optional array for multi-segment bars [{percent, color, label}]

    Example context (json):
    {
        "percent": 75,
        "color": "success",
        "showpercent": true,
        "height": 20,
        "striped": true
    }
}}
{{^segments}}
<div class="progress jb-progress{{#height}} {{/height}}" {{#height}}style="height: {{height}}px;"{{/height}} role="group" aria-label="{{#arialabel}}{{arialabel}}{{/arialabel}}{{^arialabel}}{{#str}}progressindicator, local_jobboard{{/str}}{{/arialabel}}">
    <div class="progress-bar bg-{{#color}}{{color}}{{/color}}{{^color}}primary{{/color}}{{#striped}} progress-bar-striped{{/striped}}{{#animated}} progress-bar-animated{{/animated}}"
         role="progressbar"
         style="width: {{percent}}%;"
         aria-valuenow="{{percent}}"
         aria-valuemin="0"
         aria-valuemax="100"
         aria-label="{{percent}}% {{#str}}complete, local_jobboard{{/str}}">
        <span class="progress-text">{{#showpercent}}{{percent}}%{{/showpercent}}{{#label}}{{label}}{{/label}}</span>
    </div>
</div>
<span class="sr-only">{{#arialabel}}{{arialabel}}{{/arialabel}}: {{percent}}% {{#str}}complete, local_jobboard{{/str}}</span>
{{/segments}}

{{#segments.0}}
<div class="progress jb-progress jb-progress-segmented{{#height}} {{/height}}" {{#height}}style="height: {{height}}px;"{{/height}} role="group" aria-label="{{#arialabel}}{{arialabel}}{{/arialabel}}{{^arialabel}}{{#str}}progressindicator, local_jobboard{{/str}}{{/arialabel}}">
    {{#segments}}
    <div class="progress-bar bg-{{color}}"
         role="progressbar"
         style="width: {{percent}}%;"
         aria-valuenow="{{percent}}"
         aria-valuemin="0"
         aria-valuemax="100"
         aria-label="{{label}}: {{percent}}%"
         title="{{label}}: {{percent}}%">
        {{#showvalue}}<span class="progress-text">{{label}}</span>{{/showvalue}}
    </div>
    {{/segments}}
</div>
{{/segments.0}}
