{{!
    @template local_jobboard/components/action_card

    Action card component for CTA sections.

    Context variables:
    * title - Card title
    * description - Description text
    * icon - FontAwesome icon
    * color - Color variant (primary, success, warning, danger, info, secondary)
    * primaryaction - Primary action {url, label, icon}
    * secondaryaction - Secondary action {url, label, icon}
    * alert - Optional alert message
    * alerttype - Alert type (warning, info, danger, success)

    Example context (json):
    {
        "title": "Ready to Apply?",
        "description": "Submit your application before the deadline.",
        "icon": "paper-plane",
        "color": "primary",
        "primaryaction": {"url": "/apply", "label": "Apply Now", "icon": "arrow-right"},
        "alert": "Only 3 days left!",
        "alerttype": "warning"
    }
}}
<section class="jb-action-card jb-card jb-card-shadow jb-mb-4 jb-border-left-{{color}}" aria-labelledby="action-card-title-{{uniqid}}">
    <div class="jb-card-header jb-card-header-{{color}}">
        <h5 class="jb-mb-0" id="action-card-title-{{uniqid}}">
            {{#icon}}
            <i class="fa fa-{{icon}} jb-mr-2" aria-hidden="true"></i>
            {{/icon}}
            {{title}}
        </h5>
    </div>
    <div class="jb-card-body jb-text-center">
        {{#alert}}
        <div class="jb-alert jb-alert-{{#alerttype}}{{alerttype}}{{/alerttype}}{{^alerttype}}info{{/alerttype}} jb-mb-3" role="alert">
            <i class="fa fa-exclamation-triangle jb-mr-1" aria-hidden="true"></i>
            {{alert}}
        </div>
        {{/alert}}

        {{#description}}
        <p class="jb-text-muted jb-mb-4">{{description}}</p>
        {{/description}}

        {{#primaryaction}}
        <a href="{{url}}" class="jb-btn jb-btn-{{color}} jb-btn-lg jb-btn-block jb-mb-2" role="button">
            {{#icon}}
            <i class="fa fa-{{icon}} jb-mr-2" aria-hidden="true"></i>
            {{/icon}}
            {{label}}
        </a>
        {{/primaryaction}}

        {{#secondaryaction}}
        <a href="{{url}}" class="jb-btn jb-btn-outline-{{color}} jb-btn-block" role="button">
            {{#icon}}
            <i class="fa fa-{{icon}} jb-mr-2" aria-hidden="true"></i>
            {{/icon}}
            {{label}}
        </a>
        {{/secondaryaction}}
    </div>
</section>
