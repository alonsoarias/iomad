{{!
    @template local_jobboard/components/info_card

    Information card component.

    Context variables:
    * title - Card header title
    * icon - FontAwesome icon for header
    * headercolor - Bootstrap color for header (primary, secondary, success, etc.)
    * body - HTML content for body (use {{{body}}} in parent)
    * items - Array of info items [{label, value, icon, valueclass}]
    * footer - Optional footer content
    * footeractions - Array of footer buttons [{url, label, icon, class}]
    * collapsible - Boolean for collapsible card
    * collapsed - Boolean for initially collapsed

    Example context (json):
    {
        "title": "Vacancy Details",
        "icon": "info-circle",
        "headercolor": "primary",
        "items": [
            {"label": "Code", "value": "VAC-001", "icon": "hashtag"},
            {"label": "Status", "value": "Published", "valueclass": "text-success"}
        ],
        "footeractions": [{"url": "/edit", "label": "Edit", "icon": "edit", "class": "btn-primary"}]
    }
}}
<div class="card shadow-sm mb-4 jb-info-card{{#collapsible}} jb-collapsible{{/collapsible}}">
    <div class="card-header {{#headercolor}}bg-{{headercolor}} text-white{{/headercolor}}{{^headercolor}}bg-light{{/headercolor}} d-flex justify-content-between align-items-center"
         {{#collapsible}}data-toggle="collapse" data-target="#collapse-{{uniqid}}" role="button"{{/collapsible}}>
        <h5 class="mb-0">
            {{#icon}}
            <i class="fa fa-{{icon}} mr-2"></i>
            {{/icon}}
            {{title}}
        </h5>
        {{#collapsible}}
        <i class="fa fa-chevron-down jb-collapse-icon"></i>
        {{/collapsible}}
    </div>

    <div {{#collapsible}}id="collapse-{{uniqid}}" class="collapse{{^collapsed}} show{{/collapsed}}"{{/collapsible}}>
        <div class="card-body">
            {{#body}}
            {{{body}}}
            {{/body}}

            {{#items.0}}
            <dl class="row mb-0">
                {{#items}}
                <dt class="col-sm-4 text-muted">
                    {{#icon}}
                    <i class="fa fa-{{icon}} mr-1"></i>
                    {{/icon}}
                    {{label}}
                </dt>
                <dd class="col-sm-8 {{valueclass}}">{{{value}}}</dd>
                {{/items}}
            </dl>
            {{/items.0}}
        </div>

        {{#footer}}
        <div class="card-footer bg-white">
            {{{footer}}}
        </div>
        {{/footer}}

        {{#footeractions.0}}
        <div class="card-footer bg-white d-flex justify-content-between">
            {{#footeractions}}
            <a href="{{url}}" class="btn btn-sm {{#class}}{{class}}{{/class}}{{^class}}btn-outline-secondary{{/class}}">
                {{#icon}}
                <i class="fa fa-{{icon}} mr-1"></i>
                {{/icon}}
                {{label}}
            </a>
            {{/footeractions}}
        </div>
        {{/footeractions.0}}
    </div>
</div>
