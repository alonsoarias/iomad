{{!
    @template local_jobboard/components/info_card

    Information card component.

    Context variables:
    * title - Card header title
    * icon - FontAwesome icon for header
    * headercolor - Color variant for header (primary, secondary, success, etc.)
    * body - HTML content for body (use {{{body}}} in parent)
    * items - Array of info items [{label, value, icon, valueclass}]
    * footer - Optional footer content
    * footeractions - Array of footer buttons [{url, label, icon, class}]
    * collapsible - Boolean for collapsible card
    * collapsed - Boolean for initially collapsed

    Example context (json):
    {
        "title": "Vacancy Details",
        "icon": "info-circle",
        "headercolor": "primary",
        "items": [
            {"label": "Code", "value": "VAC-001", "icon": "hashtag"},
            {"label": "Status", "value": "Published", "valueclass": "jb-text-success"}
        ],
        "footeractions": [{"url": "/edit", "label": "Edit", "icon": "edit", "class": "jb-btn-primary"}]
    }
}}
<div class="jb-card jb-card-shadow jb-mb-4 jb-info-card{{#collapsible}} jb-collapsible{{/collapsible}}">
    <div class="jb-card-header {{#headercolor}}jb-card-header-{{headercolor}}{{/headercolor}}{{^headercolor}}jb-card-header-light{{/headercolor}} jb-d-flex jb-justify-content-between jb-align-items-center"
         {{#collapsible}}data-toggle="collapse" data-target="#collapse-{{uniqid}}" role="button"{{/collapsible}}>
        <h5 class="jb-mb-0">
            {{#icon}}
            <i class="fa fa-{{icon}} jb-mr-2" aria-hidden="true"></i>
            {{/icon}}
            {{title}}
        </h5>
        {{#collapsible}}
        <i class="fa fa-chevron-down jb-collapse-icon" aria-hidden="true"></i>
        {{/collapsible}}
    </div>

    <div {{#collapsible}}id="collapse-{{uniqid}}" class="jb-collapse{{^collapsed}} jb-show{{/collapsed}}"{{/collapsible}}>
        <div class="jb-card-body">
            {{#body}}
            {{{body}}}
            {{/body}}

            {{#items.0}}
            <dl class="jb-row jb-mb-0">
                {{#items}}
                <dt class="jb-col-sm-4 jb-text-muted">
                    {{#icon}}
                    <i class="fa fa-{{icon}} jb-mr-1" aria-hidden="true"></i>
                    {{/icon}}
                    {{label}}
                </dt>
                <dd class="jb-col-sm-8 {{valueclass}}">{{{value}}}</dd>
                {{/items}}
            </dl>
            {{/items.0}}
        </div>

        {{#footer}}
        <div class="jb-card-footer jb-bg-white">
            {{{footer}}}
        </div>
        {{/footer}}

        {{#footeractions.0}}
        <div class="jb-card-footer jb-bg-white jb-d-flex jb-justify-content-between">
            {{#footeractions}}
            <a href="{{url}}" class="jb-btn jb-btn-sm {{#class}}{{class}}{{/class}}{{^class}}jb-btn-outline-secondary{{/class}}">
                {{#icon}}
                <i class="fa fa-{{icon}} jb-mr-1" aria-hidden="true"></i>
                {{/icon}}
                {{label}}
            </a>
            {{/footeractions}}
        </div>
        {{/footeractions.0}}
    </div>
</div>
