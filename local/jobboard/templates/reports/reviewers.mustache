{{!
    @template local_jobboard/reports/reviewers

    Reviewers performance report section template.

    Context variables:
    * reviewers - Array of reviewer data with stats

    Example context (json):
    {
        "reviewers": [{"name": "John Doe", "workload": 15, "reviewed": 100}]
    }
}}
<div class="jb-report-reviewers">
    <div class="jb-card jb-shadow-sm jb-mb-4">
        <div class="jb-card-header jb-bg-white">
            <h5 class="jb-mb-0">
                <i class="fa fa-users jb-mr-2"></i>
                {{#str}}reviewerperformance, local_jobboard{{/str}}
            </h5>
        </div>
        <div class="jb-card-body jb-p-0">
            <div class="jb-table-responsive">
                <table class="jb-table jb-table-striped jb-table-hover jb-mb-0">
                    <thead class="jb-thead-light">
                        <tr>
                            <th>{{#str}}reviewer, local_jobboard{{/str}}</th>
                            <th class="jb-text-center">{{#str}}currentworkload, local_jobboard{{/str}}</th>
                            <th class="jb-text-center">{{#str}}reviewed, local_jobboard{{/str}}</th>
                            <th class="jb-text-center jb-text-success">{{#str}}validated, local_jobboard{{/str}}</th>
                            <th class="jb-text-center jb-text-danger">{{#str}}rejected, local_jobboard{{/str}}</th>
                            <th class="jb-text-center">{{#str}}avgtime, local_jobboard{{/str}}</th>
                            <th class="jb-w-25">{{#str}}performance, local_jobboard{{/str}}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#reviewers}}
                        <tr>
                            <td>
                                <div class="jb-d-flex jb-align-items-center">
                                    {{#userpicture}}{{{userpicture}}}{{/userpicture}}
                                    <div class="jb-ml-2">
                                        <strong>{{fullname}}</strong>
                                        {{#email}}
                                        <small class="jb-text-muted jb-d-block">{{email}}</small>
                                        {{/email}}
                                    </div>
                                </div>
                            </td>
                            <td class="jb-text-center">
                                <span class="jb-badge {{#highworkload}}jb-badge-danger{{/highworkload}}{{^highworkload}}jb-badge-info{{/highworkload}}">
                                    {{workload}}
                                </span>
                            </td>
                            <td class="jb-text-center jb-fw-bold">{{reviewed}}</td>
                            <td class="jb-text-center jb-text-success">{{validated}}</td>
                            <td class="jb-text-center jb-text-danger">{{rejected}}</td>
                            <td class="jb-text-center">{{avgtime}}h</td>
                            <td>
                                <div class="jb-progress" style="height: 8px;">
                                    <div class="jb-progress-bar jb-bg-success" style="width: {{validatedpct}}%" title="{{#str}}validated, local_jobboard{{/str}}"></div>
                                    <div class="jb-progress-bar jb-bg-danger" style="width: {{rejectedpct}}%" title="{{#str}}rejected, local_jobboard{{/str}}"></div>
                                </div>
                                <small class="jb-text-muted">{{validatedpct}}% {{#str}}approvalrate, local_jobboard{{/str}}</small>
                            </td>
                        </tr>
                        {{/reviewers}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
