{{!
    @template local_jobboard/reports/applications

    Applications report section template.

    Context variables:
    * byvacancy - Array of applications by vacancy

    Example context (json):
    {
        "byvacancy": [{"code": "VAC-001", "total": 50, "selected": 10}]
    }
}}
<div class="jb-report-applications">
    <div class="jb-card jb-shadow-sm jb-mb-4">
        <div class="jb-card-header jb-bg-white">
            <h5 class="jb-mb-0">
                <i class="fa fa-briefcase jb-mr-2"></i>
                {{#str}}applicationsbyvacancy, local_jobboard{{/str}}
            </h5>
        </div>
        <div class="jb-card-body jb-p-0">
            <div class="jb-table-responsive">
                <table class="jb-table jb-table-striped jb-table-hover jb-mb-0">
                    <thead class="jb-thead-light">
                        <tr>
                            <th>{{#str}}vacancy, local_jobboard{{/str}}</th>
                            <th class="jb-text-center">{{#str}}total{{/str}}</th>
                            <th class="jb-text-center jb-text-success">{{#str}}selected, local_jobboard{{/str}}</th>
                            <th class="jb-text-center jb-text-danger">{{#str}}rejected, local_jobboard{{/str}}</th>
                            <th class="jb-text-center jb-text-warning">{{#str}}pending, local_jobboard{{/str}}</th>
                            <th class="jb-w-25">{{#str}}progress, local_jobboard{{/str}}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#byvacancy}}
                        <tr>
                            <td>
                                <span class="jb-badge jb-badge-secondary jb-mr-2">{{code}}</span>
                                {{title}}
                            </td>
                            <td class="jb-text-center jb-fw-bold">{{total}}</td>
                            <td class="jb-text-center jb-text-success">{{selected}}</td>
                            <td class="jb-text-center jb-text-danger">{{rejected}}</td>
                            <td class="jb-text-center jb-text-warning">{{pending}}</td>
                            <td>
                                <div class="jb-progress" style="height: 8px;">
                                    <div class="jb-progress-bar jb-bg-success" style="width: {{selectedpct}}%" title="{{#str}}selected, local_jobboard{{/str}}"></div>
                                    <div class="jb-progress-bar jb-bg-danger" style="width: {{rejectedpct}}%" title="{{#str}}rejected, local_jobboard{{/str}}"></div>
                                    <div class="jb-progress-bar jb-bg-warning" style="width: {{pendingpct}}%" title="{{#str}}pending, local_jobboard{{/str}}"></div>
                                </div>
                            </td>
                        </tr>
                        {{/byvacancy}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
