{{!
    @template local_jobboard/reports/applications

    Applications report section template.

    Context variables:
    * byvacancy - Array of applications by vacancy

    Example context (json):
    {
        "byvacancy": [{"code": "VAC-001", "total": 50, "selected": 10}]
    }
}}
<div class="jb-report-applications">
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-white">
            <h5 class="mb-0">
                <i class="fa fa-briefcase mr-2"></i>
                {{#str}}applicationsbyvacancy, local_jobboard{{/str}}
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th>{{#str}}vacancy, local_jobboard{{/str}}</th>
                            <th class="text-center">{{#str}}total{{/str}}</th>
                            <th class="text-center text-success">{{#str}}selected, local_jobboard{{/str}}</th>
                            <th class="text-center text-danger">{{#str}}rejected, local_jobboard{{/str}}</th>
                            <th class="text-center text-warning">{{#str}}pending, local_jobboard{{/str}}</th>
                            <th class="w-25">{{#str}}progress, local_jobboard{{/str}}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#byvacancy}}
                        <tr>
                            <td>
                                <span class="badge badge-secondary mr-2">{{code}}</span>
                                {{title}}
                            </td>
                            <td class="text-center font-weight-bold">{{total}}</td>
                            <td class="text-center text-success">{{selected}}</td>
                            <td class="text-center text-danger">{{rejected}}</td>
                            <td class="text-center text-warning">{{pending}}</td>
                            <td>
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar bg-success" style="width: {{selectedpct}}%" title="{{#str}}selected, local_jobboard{{/str}}"></div>
                                    <div class="progress-bar bg-danger" style="width: {{rejectedpct}}%" title="{{#str}}rejected, local_jobboard{{/str}}"></div>
                                    <div class="progress-bar bg-warning" style="width: {{pendingpct}}%" title="{{#str}}pending, local_jobboard{{/str}}"></div>
                                </div>
                            </td>
                        </tr>
                        {{/byvacancy}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
