{{!
    @template local_jobboard/reports/overview

    Overview report section template.

    Context variables:
    * stats - Summary statistics array
    * statusdata - Applications by status data

    Example context (json):
    {
        "stats": {"total": 100, "selected": 20, "rejected": 10}
    }
}}
<div class="jb-report-overview">
    {{! Summary Statistics Row }}
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center shadow-sm h-100">
                <div class="card-body">
                    <h2 class="mb-1 text-primary">{{stats.total}}</h2>
                    <p class="text-muted mb-0">{{#str}}totalapplications, local_jobboard{{/str}}</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm h-100 bg-success text-white">
                <div class="card-body">
                    <h2 class="mb-1">{{stats.selected}}</h2>
                    <p class="mb-0">{{#str}}selected, local_jobboard{{/str}}</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm h-100 bg-danger text-white">
                <div class="card-body">
                    <h2 class="mb-1">{{stats.rejected}}</h2>
                    <p class="mb-0">{{#str}}rejected, local_jobboard{{/str}}</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm h-100">
                <div class="card-body">
                    <h2 class="mb-1 text-info">{{stats.selectionrate}}%</h2>
                    <p class="text-muted mb-0">{{#str}}selectionrate, local_jobboard{{/str}}</p>
                </div>
            </div>
        </div>
    </div>

    {{! Applications by Status }}
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-white">
            <h5 class="mb-0">
                <i class="fa fa-chart-pie mr-2"></i>
                {{#str}}applicationsbystatus, local_jobboard{{/str}}
            </h5>
        </div>
        <div class="card-body">
            <table class="table table-hover mb-0">
                <thead class="thead-light">
                    <tr>
                        <th>{{#str}}status, local_jobboard{{/str}}</th>
                        <th>{{#str}}count, local_jobboard{{/str}}</th>
                        <th class="w-50">{{#str}}percentage, local_jobboard{{/str}}</th>
                    </tr>
                </thead>
                <tbody>
                    {{#statusdata}}
                    <tr>
                        <td>
                            <span class="badge badge-{{color}}">{{label}}</span>
                        </td>
                        <td>{{count}}</td>
                        <td>
                            <div class="progress" style="height: 20px;">
                                <div class="progress-bar bg-{{color}}" style="width: {{percentage}}%">
                                    {{percentage}}%
                                </div>
                            </div>
                        </td>
                    </tr>
                    {{/statusdata}}
                </tbody>
            </table>
        </div>
    </div>
</div>
