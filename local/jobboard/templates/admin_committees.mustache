{{!
    @template local_jobboard/admin_committees

    Committees management template.

    Context variables:
    * committees - Array of committee objects
    * hascommittees - Boolean
    * count - Total count
    * pagination - Pagination HTML
    * createurl - URL to create new committee
}}
<div class="jb-admin-committees">
    {{> local_jobboard/admin_tabs }}

    <div class="jb-d-flex jb-justify-content-between jb-align-items-center jb-mb-4">
        <h4>{{#str}}committees, local_jobboard{{/str}}</h4>
        <a href="{{createurl}}" class="jb-btn jb-btn-primary">
            <i class="fa fa-plus jb-mr-1" aria-hidden="true"></i>
            {{#str}}createcommittee, local_jobboard{{/str}}
        </a>
    </div>

    {{#hascommittees}}
    <div class="jb-card">
        <div class="jb-table-responsive">
            <table class="jb-table jb-table-hover jb-mb-0">
                <thead class="jb-thead-light">
                    <tr>
                        <th>{{#str}}name, local_jobboard{{/str}}</th>
                        <th>{{#str}}convocatoria, local_jobboard{{/str}}</th>
                        <th>{{#str}}members, local_jobboard{{/str}}</th>
                        <th>{{#str}}status, local_jobboard{{/str}}</th>
                        <th>{{#str}}actions, local_jobboard{{/str}}</th>
                    </tr>
                </thead>
                <tbody>
                    {{#committees}}
                    <tr>
                        <td>
                            <strong>{{name}}</strong>
                            {{#description}}<br><small class="jb-text-muted">{{description}}</small>{{/description}}
                        </td>
                        <td>{{convocatorianame}}</td>
                        <td>{{membercount}}</td>
                        <td><span class="jb-badge jb-badge-{{statusclass}}">{{status}}</span></td>
                        <td>
                            <div class="jb-btn-group jb-btn-group-sm">
                                <a href="{{membersurl}}" class="jb-btn jb-btn-outline-primary" title="{{#str}}managemembers, local_jobboard{{/str}}">
                                    <i class="fa fa-users" aria-hidden="true"></i>
                                </a>
                                <a href="{{editurl}}" class="jb-btn jb-btn-outline-secondary" title="{{#str}}edit, local_jobboard{{/str}}">
                                    <i class="fa fa-edit" aria-hidden="true"></i>
                                </a>
                                <a href="{{deleteurl}}" class="jb-btn jb-btn-outline-danger" title="{{#str}}delete, local_jobboard{{/str}}">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {{/committees}}
                </tbody>
            </table>
        </div>
    </div>
    {{{pagination}}}
    {{/hascommittees}}
    {{^hascommittees}}
    {{> local_jobboard/components/empty_state }}
    {{/hascommittees}}
</div>
