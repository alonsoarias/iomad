{{!
    @template local_jobboard/admin_audit_log

    Audit log page template.

    Context variables:
    * logs - Array of log entries
    * haslogs - Boolean
    * count - Total count
    * filters - Current filters
    * pagination - Pagination HTML
    * exporturl - Export URL
}}
<div class="jb-admin-audit-log">
    <div class="jb-d-flex jb-justify-content-between jb-align-items-center jb-mb-4">
        <h4>{{#str}}auditlog, local_jobboard{{/str}}</h4>
        <a href="{{exporturl}}" class="jb-btn jb-btn-outline-primary">
            <i class="fa fa-download jb-mr-1" aria-hidden="true"></i>
            {{#str}}export, local_jobboard{{/str}}
        </a>
    </div>

    {{#haslogs}}
    <div class="jb-card">
        <div class="jb-table-responsive">
            <table class="jb-table jb-table-hover jb-table-sm jb-mb-0">
                <thead class="jb-thead-light">
                    <tr>
                        <th>{{#str}}datetime, local_jobboard{{/str}}</th>
                        <th>{{#str}}user, local_jobboard{{/str}}</th>
                        <th>{{#str}}action, local_jobboard{{/str}}</th>
                        <th>{{#str}}entity, local_jobboard{{/str}}</th>
                        <th>{{#str}}details, local_jobboard{{/str}}</th>
                        <th>{{#str}}ipaddress, local_jobboard{{/str}}</th>
                    </tr>
                </thead>
                <tbody>
                    {{#logs}}
                    <tr>
                        <td><small>{{timecreated}}</small></td>
                        <td>{{username}}</td>
                        <td><span class="jb-badge jb-badge-secondary">{{actionlabel}}</span></td>
                        <td><small>{{entitytype}} #{{entityid}}</small></td>
                        <td><small class="jb-text-muted">{{details}}</small></td>
                        <td><small class="jb-text-muted">{{ipaddress}}</small></td>
                    </tr>
                    {{/logs}}
                </tbody>
            </table>
        </div>
    </div>
    {{{pagination}}}
    {{/haslogs}}
    {{^haslogs}}
    <p class="jb-text-muted jb-text-center jb-py-4">{{#str}}noauditlogs, local_jobboard{{/str}}</p>
    {{/haslogs}}
</div>
