{{!
    @template local_jobboard/job_alert_form

    Job alert subscription form template.

    Context variables:
    * actionurl - Form action URL
    * categories - Category options array
    * hascategories - Boolean
    * locations - Location options array
    * haslocations - Boolean
}}
<div class="jb-job-alert-form jb-card">
    <div class="jb-card-header">
        <h5 class="jb-mb-0">
            <i class="fa fa-bell jb-mr-2" aria-hidden="true"></i>
            {{#str}}jobalerts, local_jobboard{{/str}}
        </h5>
    </div>
    <div class="jb-card-body">
        <p class="jb-text-muted jb-small jb-mb-3">{{#str}}jobalertsdesc, local_jobboard{{/str}}</p>
        <form action="{{actionurl}}" method="post">
            <input type="hidden" name="sesskey" value="{{sesskey}}">
            <div class="jb-form-group">
                <label for="alert-email">{{#str}}email, local_jobboard{{/str}}</label>
                <input type="email" name="email" id="alert-email" class="jb-form-control" required>
            </div>
            {{#hascategories}}
            <div class="jb-form-group">
                <label for="alert-category">{{#str}}category, local_jobboard{{/str}}</label>
                <select name="category" id="alert-category" class="jb-form-control jb-custom-select">
                    <option value="">{{#str}}allcategories, local_jobboard{{/str}}</option>
                    {{#categories}}
                    <option value="{{id}}">{{name}}</option>
                    {{/categories}}
                </select>
            </div>
            {{/hascategories}}
            {{#haslocations}}
            <div class="jb-form-group">
                <label for="alert-location">{{#str}}location, local_jobboard{{/str}}</label>
                <select name="location" id="alert-location" class="jb-form-control jb-custom-select">
                    <option value="">{{#str}}alllocations, local_jobboard{{/str}}</option>
                    {{#locations}}
                    <option value="{{value}}">{{label}}</option>
                    {{/locations}}
                </select>
            </div>
            {{/haslocations}}
            <button type="submit" class="jb-btn jb-btn-primary jb-btn-block">
                <i class="fa fa-bell jb-mr-1" aria-hidden="true"></i>
                {{#str}}subscribe, local_jobboard{{/str}}
            </button>
        </form>
    </div>
</div>
