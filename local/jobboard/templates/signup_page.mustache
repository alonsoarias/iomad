{{!
    Signup page template for local_jobboard.
    Follows the inteb/remui theme design patterns.

    @package   local_jobboard
    @copyright 2024 ISER
    @license   http://www.gnu.org/copyleft/gpl.html GNU GPL v3 or later
}}
<div class="container-fluid px-3 px-md-5">
    {{! Header Section }}
    <div class="text-center mb-4 pb-3 border-bottom">
        <div class="mb-3">
            {{#pix}}i/user, core{{/pix}}
        </div>
        <h1 class="h3 mb-2">{{title}}</h1>
        <p class="text-muted">{{intro}}</p>
    </div>

    {{! Vacancy Info Card (if applying to specific vacancy) }}
    {{#vacancy}}
    <div class="card mb-4 border-primary">
        <div class="card-header bg-primary text-white py-2">
            <h5 class="mb-0 d-flex align-items-center">
                {{#pix}}i/briefcase, core{{/pix}}
                <span class="ml-2">{{applyingfortext}}</span>
            </h5>
        </div>
        <div class="card-body py-3">
            <h5 class="card-title mb-2 font-weight-bold">{{vacancy.title}}</h5>
            <p class="card-text mb-1">
                <span class="text-muted">{{codetext}}:</span>
                <strong>{{vacancy.code}}</strong>
            </p>
            {{#vacancy.location}}
            <p class="card-text mb-0 text-muted small">
                {{#pix}}i/location, core{{/pix}}
                {{vacancy.location}}
            </p>
            {{/vacancy.location}}
        </div>
    </div>
    {{/vacancy}}

    {{! Already have account notice }}
    <div class="alert alert-info d-flex align-items-center mb-4">
        <span class="mr-3">{{#pix}}i/info, core{{/pix}}</span>
        <div class="flex-grow-1">
            <strong>{{alreadyaccounttext}}</strong>
            <a href="{{loginurl}}" class="btn btn-sm btn-primary ml-2">
                {{logintext}}
            </a>
        </div>
    </div>

    {{! Required fields notice }}
    <p class="text-muted small mb-4">
        <span class="text-danger">*</span> {{requiredfieldstext}}
    </p>

    {{! The form content }}
    <div class="card">
        <div class="card-body">
            {{{formhtml}}}
        </div>
    </div>
</div>
