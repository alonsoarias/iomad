{{!
    @template theme_inteb/profile_courses

    Profile courses with card grid layout.
}}
<section class="profile-courses-section">
    <div class="container-fluid px-0">
        {{^ hascourses }}
        <div class="profile-no-courses alert alert-info">
            <i class="fa fa-info-circle mr-2"></i>
            {{# str }} notenrolledanycourse, theme_remui {{/ str }}
        </div>
        {{/ hascourses }}
        {{# hascourses }}
        <div class="profile-courses-grid">
            {{# courses }}
            <div class="profile-course-card" data-course-id="{{ id }}">
                <div class="profile-course-card-inner">
                    {{! Course Image }}
                    <div class="profile-course-card-img">
                        <a href="{{ link }}" class="profile-course-card-img-link" title="{{{fullname}}}">
                            <div class="profile-course-card-image" style="background-image: url({{{ courseimage }}});"></div>
                            <div class="profile-course-card-overlay"></div>
                        </a>
                    </div>

                    {{! Course Content }}
                    <div class="profile-course-card-body">
                        {{! Category }}
                        <div class="profile-course-card-category">
                            <span class="category-name text-truncate" title="{{{categoryname}}}">
                                {{{categoryname}}}
                            </span>
                        </div>

                        {{! Course Name }}
                        <div class="profile-course-card-title">
                            <a href="{{ link }}" class="course-title-link" title="{{{fullname}}}">
                                {{{ fullname }}}
                            </a>
                        </div>

                        {{! Instructor Info }}
                        {{#instructor}}
                        <div class="profile-course-card-instructor">
                            <a href="{{ url }}" class="instructor-link" title="{{{name}}}">
                                <img src="{{ picture }}" class="instructor-avatar" alt="{{ name }}" loading="lazy"/>
                                <span class="instructor-name">{{{name}}}</span>
                            </a>
                            {{#instructorcount}}
                            <span class="instructor-count">+{{instructorcount}}</span>
                            {{/instructorcount}}
                        </div>
                        {{/instructor}}
                    </div>

                    {{! Course Footer - Progress and Action }}
                    <div class="profile-course-card-footer">
                        {{# enablecompletion }}
                        <div class="profile-course-card-progress">
                            <div class="progress-info">
                                <span class="progress-label">{{activitydata}}</span>
                                <span class="progress-percentage">{{#progress}}{{progress}}{{/progress}}{{^progress}}0{{/progress}}%</span>
                            </div>
                            <div class="progress" title="{{#str}}completepercent, theme_remui,{{progress}}{{/str}}">
                                <div class="progress-bar {{#progress}}{{#isHighProgress}}bg-success{{/isHighProgress}}{{/progress}}"
                                     role="progressbar"
                                     style="width: {{#progress}}{{progress}}{{/progress}}{{^progress}}0{{/progress}}%"
                                     aria-valuenow="{{progress}}"
                                     aria-valuemin="0"
                                     aria-valuemax="100">
                                </div>
                            </div>
                        </div>
                        {{/ enablecompletion }}
                        <div class="profile-course-card-action">
                            <a class="btn btn-primary btn-sm view-course-btn" href="{{ link }}" title="{{#str}}viewcoursetitle,theme_remui{{/str}}">
                                <i class="fa fa-eye mr-1"></i>
                                {{#str}}viewcourse,theme_remui{{/str}}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            {{/ courses }}
        </div>
        {{/ hascourses }}
    </div>
</section>
