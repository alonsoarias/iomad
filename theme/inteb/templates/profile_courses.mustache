{{!
    @template theme_inteb/profile_courses

    Profile courses with list layout (similar to mycourses block list view).
}}
<section class="profile-courses-section">
    <div class="container-fluid px-0">
        {{^ hascourses }}
        <div class="profile-no-courses alert alert-info">
            <i class="fa fa-info-circle mr-2"></i>
            {{# str }} notenrolledanycourse, theme_remui {{/ str }}
        </div>
        {{/ hascourses }}
        {{# hascourses }}
        <ul class="profile-courses-list list-group m-0">
            {{# courses }}
            <li class="profile-course-list-item list-group-item d-flex" data-course-id="{{ id }}">
                {{! Course Image - Left Side }}
                <div class="profile-course-img-wrapper">
                    <a href="{{ link }}" class="profile-course-img-link" title="{{{fullname}}}">
                        <div class="profile-course-img" style="background-image: url({{{ courseimage }}});"></div>
                    </a>
                </div>

                {{! Course Content - Right Side }}
                <div class="profile-course-body">
                    {{! Header: Category and Course Name }}
                    <div class="profile-course-header">
                        {{! Category }}
                        <div class="profile-course-category">
                            <span class="category-badge" title="{{{categoryname}}}">
                                {{{categoryname}}}
                            </span>
                        </div>

                        {{! Course Name }}
                        <a href="{{ link }}" class="profile-course-title" title="{{{fullname}}}">
                            {{{ fullname }}}
                        </a>

                        {{! Instructor Info }}
                        {{#instructor}}
                        <div class="profile-course-instructor">
                            <a href="{{ url }}" class="instructor-link" title="{{{name}}}">
                                <img src="{{ picture }}" class="instructor-avatar" alt="{{ name }}" loading="lazy"/>
                                <span class="instructor-name">{{{name}}}</span>
                            </a>
                            {{#instructorcount}}
                            <span class="instructor-count">+{{instructorcount}}</span>
                            {{/instructorcount}}
                        </div>
                        {{/instructor}}
                    </div>

                    {{! Footer: Progress and Action Button }}
                    <div class="profile-course-footer">
                        {{# enablecompletion }}
                        <div class="profile-course-progress">
                            <span class="progress-label">{{activitydata}}</span>
                            <div class="progress">
                                <div class="progress-bar"
                                     role="progressbar"
                                     style="width: {{#progress}}{{progress}}{{/progress}}{{^progress}}0{{/progress}}%"
                                     aria-valuenow="{{progress}}"
                                     aria-valuemin="0"
                                     aria-valuemax="100">
                                </div>
                            </div>
                            <span class="progress-percentage">{{#progress}}{{progress}}{{/progress}}{{^progress}}0{{/progress}}%</span>
                        </div>
                        {{/ enablecompletion }}
                        <a class="btn btn-secondary btn-sm view-course-btn" href="{{ link }}" title="{{#str}}viewcoursetitle,theme_remui{{/str}}">
                            {{#str}}viewcourse,theme_remui{{/str}}
                        </a>
                    </div>
                </div>
            </li>
            {{/ courses }}
        </ul>
        {{/ hascourses }}
    </div>
</section>
