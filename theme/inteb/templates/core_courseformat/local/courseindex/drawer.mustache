    @template core_courseformat/local/courseindex/drawer

    This template renders the course index drawer with the placeholder.
    Copy from RemUI parent theme - No modifications needed for drawer.

    Example context (json):
    {}
}}
<nav id="courseindex" class="courseindex">
    <div class="p-mb-4">
        <span class="course-heading h-bold-4" title="{{#str}} sidebarcoursemenuheading, theme_remui {{/str}}">{{#str}} sidebarcoursemenuheading, theme_remui {{/str}}</span>
    </div>
    <div id="courseindex-content">
        {{> core_courseformat/local/courseindex/placeholders }}
    </div>
</nav>
{{#js}}
require(['core_courseformat/local/courseindex/drawer'], function(component) {
    component.init('courseindex');
});
{{/js}}