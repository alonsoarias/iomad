{{!
    @template theme_inteb/navbar

    This template renders the top navbar with GOV.CO bar.
}}

<!-- Barra superior GOV.CO -->
<div class="gov-navbar-top fixed-top">
    <div class="container">
        <div class="gov-logo">
            <a href="https://www.gov.co/" target="_blank" rel="noopener noreferrer" aria-label="Portal GOV.CO">
                <img src="{{config.wwwroot}}/theme/inteb/pix/logo-govco.webp"
                     alt="Logo GOV.CO"
                     class="img-fluid"
                     loading="lazy">
            </a>
        </div>
    </div>
</div>

<!-- Navbar principal de Moodle - Posicionado debajo de la barra GOV.CO (38px) -->
<nav class="navbar fixed-top navbar-expand {{navlayout}} {{#homepagetransparentheader}}trasnparent-home-nav{{/homepagetransparentheader}}"
     style="top: 38px !important;"
     aria-label="{{#str}}sitemenubar, admin{{/str}}">

    <!-- Branding / Logo (Logo completo de la compañía o del tema) -->
    <a href="{{{ config.homeurl }}}" class="navbar-brand d-none d-md-flex align-items-center m-0 aabtn" 
       aria-label="{{sitename}} - {{#str}}brandname, theme_remui{{/str}}" title="{{sitename}}">
      {{#output.get_branding_context}}
        {{!-- Mostrar el logo completo de la compañía si existe --}}
        {{#companylogourl}}
          <img src="{{companylogourl}}" class="navbar-brand-logo logo" alt="{{companyname}} Logo" style="max-height:40px;">
        {{/companylogourl}}
        {{^companylogourl}}
          {{!-- Si no hay logo completo, se muestra el logo configurado en el tema --}}
          {{#logourl}}
            <img src="{{logourl}}" class="navbar-brand-logo logo" alt="{{sitename}} Logo" style="max-height:40px;">
          {{/logourl}}
          {{#logominiurl}}
            <img src="{{logominiurl}}" class="navbar-brand-logo logomini" alt="Mini Logo" style="max-height:40px;">
          {{/logominiurl}}
          {{#icononly}}
            <span class="navbar-brand-logo icononly" style="color: {{color}};">
              <i class="fa fa-{{siteicon}}"></i>
            </span>
          {{/icononly}}
          {{#iconwithsitename}}
            <span class="navbar-brand-logo iconsitename" style="color: {{color}};">
              <i class="fa fa-{{siteicon}}"></i>&nbsp;{{{sitename}}}
            </span>
          {{/iconwithsitename}}
        {{/companylogourl}}
      {{/output.get_branding_context}}
      {{^output.get_branding_context}}
        {{!-- Fallback: se usa la lógica compacta de IOMAD --}}
        {{#output.should_display_navbar_logo}}
          <img src="{{output.get_compact_logo_url}}" class="logo me-1" alt="{{sitename}}">
        {{/output.should_display_navbar_logo}}
        {{^output.should_display_navbar_logo}}
          {{{sitename}}}
        {{/output.should_display_navbar_logo}}
      {{/output.get_branding_context}}
    </a>

    <div class="sub-nav">
        <div class="navbar-toggler-wrapper">
            <button class="navbar-toggler aabtn d-block d-lg-none border-0 h-100 p-0" data-toggler="drawers" data-action="toggle" data-target="theme_remui-drawers-primary">
                <span class="edw-icon edw-icon-Mobile-menu"></span>
                <span class="sr-only">{{#str}}sidepanel, core{{/str}}</span>
            </button>
        </div>

        {{#primarymoremenu}}
            <div class="primary-navigation">
                {{> core/moremenu}}
            </div>
        {{/primarymoremenu}}

        <!-- <ul class="navbar-nav d-none d-md-flex my-1 px-1">-->
        <!-- page_heading_menu -->
        <!-- {{{ output.page_heading_menu }}}-->
        <!-- </ul> -->

        <div id="usernavigation" class="navbar-nav ml-auto">
            {{#edwisermenu}}
                <div class="edwiser-navigation">
                    {{> core/moremenu}}
                </div>
            {{/edwisermenu}}
            {{# output.edw_search_box }}
                {{{ output.edw_search_box }}}
            {{/output.edw_search_box}}
            {{#langmenu}}
                {{> theme_remui/language_menu }}
            {{/langmenu}}
            {{{ output.navbar_plugin_output }}}

            {{#usermenu}}
            <div class="d-flex usermenu-wrapper">
                <div class="divider  h-75 align-self-center"></div>
                <div class="d-flex align-items-stretch usermenu-container" data-region="usermenu">
                    {{> core/user_menu }}
                </div>
                {{#isloggedin}}
                <div class="divider  h-75 align-self-center"></div>
                {{/isloggedin}}
            </div>
            {{/usermenu}}

            {{#canenabledm}}
                <div class="nav-darkmode nav-item d-flex align-items-center" data-dm="disabled">
                    <a class="dm-toggle text-decoration-none">
                        {{^dmanimate}}
                        <span class="edw-icon edw-icon-Dark-mode darkmodeicon"  title="{{#str}}darkmodetitilestring, theme_remui{{/str}}"></span>
                        <span class="edw-icon edw-icon-Light-mode lightmodeicon"  title="{{#str}}lightmodetitlestring, theme_remui{{/str}}"></span>
                        {{/dmanimate}}

                        {{#dmanimate}}
                        <img src="{{config.wwwroot}}/theme/remui/pix/darkmode.gif" style="width:50px;height:50px;"/>
                        <span class="edw-icon edw-icon-Light-mode lightmodeicon"  title="{{#str}}lightmodetitlestring, theme_remui{{/str}}"></span>
                        {{/dmanimate}}
                    </a>
                </div>
            {{/canenabledm}}
            {{{ output.edit_switch }}}
        </div>
    </div>

</nav>
{{#show_license_notice}}
{{{show_license_notice}}}
{{/show_license_notice}}

