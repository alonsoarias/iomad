    @template block_mycourses/completed-view

    This template renders the completed courses list view for the mycourses block.
    Redesigned for theme_inteb - Consistent with profile courses design.
}}
<div id="completed-view-{{uniqid}}" data-region="completed-view" class="inteb-mycourses-view inteb-list-view">
    <div class="tab-content">
        <div class="tab-pane active" id="mycourses_completed_view">
            <div id="paged-content-container-{{uniqid}}" data-region="paged-content-container">
                <div id="page-container-1" data-region="page-container" class="paged-content-page-container" aria-live="polite">
                    <div id="paged-content-page" data-page="1">
                        <div class="inteb-course-list" id="{{uniqid}}">
                            {{#completedview.courses}}
                            <div class="inteb-list-item inteb-completed-item card mb-3 shadow-sm" data-region="course-content" data-course-id="{{{id}}}">
                                <div class="card-body p-0">
                                    <div class="row no-gutters">
                                        {{! Course Image - Left Column }}
                                        <div class="col-md-3 col-lg-2">
                                            {{^visible}}
                                            <div class="inteb-list-img-wrapper d-block position-relative dimmed_text">
                                            {{/visible}}
                                            {{#visible}}
                                            <a href="{{{url}}}" class="inteb-list-img-wrapper d-block position-relative" tabindex="-1" title="{{{fullname}}}">
                                            {{/visible}}
                                                <div class="inteb-list-img" style="background-image: url('{{{image}}}');">
                                                    <span class="sr-only">{{{fullname}}}</span>
                                                </div>
                                                {{! Completed Badge Overlay }}
                                                <div class="inteb-list-badge position-absolute">
                                                    <span class="badge badge-success">
                                                        <i class="fa fa-check-circle mr-1" aria-hidden="true"></i>
                                                        {{#str}}completed, block_mycourses{{/str}}
                                                    </span>
                                                </div>
                                            {{#visible}}
                                            </a>
                                            {{/visible}}
                                            {{^visible}}
                                            </div>
                                            {{/visible}}
                                        </div>

                                        {{! Course Content - Right Column }}
                                        <div class="col-md-9 col-lg-10">
                                            <div class="inteb-list-content p-3">
                                                {{! Top Row: Title/Category and Action Button }}
                                                <div class="d-flex justify-content-between align-items-start flex-wrap">
                                                    <div class="inteb-list-title-wrap mb-2">
                                                        {{! Visibility Warning }}
                                                        {{^visible}}
                                                        <span class="badge badge-warning mr-2" title="{{#str}}hiddenfromstudents{{/str}}">
                                                            <i class="fa fa-eye-slash" aria-hidden="true"></i>
                                                        </span>
                                                        {{/visible}}
                                                        {{! Course Title }}
                                                        {{#visible}}
                                                        <a href="{{{url}}}" class="inteb-list-title h5 mb-0 text-dark" title="{{{fullname}}}">
                                                            {{{fullname}}}
                                                        </a>
                                                        {{/visible}}
                                                        {{^visible}}
                                                        <span class="inteb-list-title h5 mb-0 text-muted">{{{fullname}}}</span>
                                                        {{/visible}}
                                                        {{! Category Badge }}
                                                        {{#coursecategory}}
                                                        <span class="badge badge-light ml-2">{{{coursecategory}}}</span>
                                                        {{/coursecategory}}
                                                    </div>

                                                    {{! Action Button }}
                                                    <div class="inteb-list-action">
                                                        <a href="{{{url}}}" class="btn btn-outline-secondary btn-sm">
                                                            <i class="fa fa-eye mr-1" aria-hidden="true"></i>
                                                            {{#str}}viewcourse, block_mycourses{{/str}}
                                                        </a>
                                                    </div>
                                                </div>

                                                {{! Course Summary }}
                                                {{#summary}}
                                                <p class="inteb-list-summary text-muted small mb-2">{{{summary}}}</p>
                                                {{/summary}}

                                                {{! Progress Section - Completed (100%) }}
                                                <div class="inteb-list-progress mt-2">
                                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                                        <span class="small text-muted">{{#str}}progress, block_mycourses{{/str}}</span>
                                                        <span class="small font-weight-bold text-success">100%</span>
                                                    </div>
                                                    <div class="progress inteb-progress" style="height: 8px;">
                                                        <div class="progress-bar inteb-progress-bar bg-success"
                                                             role="progressbar"
                                                             style="width: 100%;"
                                                             aria-valuenow="100"
                                                             aria-valuemin="0"
                                                             aria-valuemax="100">
                                                        </div>
                                                    </div>
                                                </div>

                                                {{! Completion Details Row }}
                                                <div class="inteb-list-completion-details mt-2 pt-2 border-top">
                                                    <div class="d-flex flex-wrap align-items-center">
                                                        {{! Completion Date }}
                                                        {{#timecompleted}}
                                                        <div class="mr-4 mb-1">
                                                            <span class="small">
                                                                <i class="fa fa-calendar-check-o text-success mr-1" aria-hidden="true"></i>
                                                                <span class="text-muted">{{#str}}timecompleted, local_report_completion{{/str}}:</span>
                                                                <strong>{{timecompleted}}</strong>
                                                            </span>
                                                        </div>
                                                        {{/timecompleted}}

                                                        {{! Expiry Date }}
                                                        {{#timeexpires}}
                                                        <div class="mr-4 mb-1">
                                                            <span class="small">
                                                                <i class="fa fa-clock-o text-warning mr-1" aria-hidden="true"></i>
                                                                <span class="text-muted">{{#str}}timeexpires, local_report_completion{{/str}}:</span>
                                                                <strong>{{timeexpires}}</strong>
                                                            </span>
                                                        </div>
                                                        {{/timeexpires}}

                                                        {{! Final Score }}
                                                        {{#hasgrade}}
                                                        <div class="mr-4 mb-1">
                                                            <span class="small">
                                                                <i class="fa fa-star text-primary mr-1" aria-hidden="true"></i>
                                                                <span class="text-muted">{{#str}}finalscore, block_mycourses{{/str}}:</span>
                                                                <strong class="text-primary">{{finalscore}}%</strong>
                                                            </span>
                                                        </div>
                                                        {{/hasgrade}}
                                                        {{^hasgrade}}
                                                        <div class="mr-4 mb-1">
                                                            <span class="small">
                                                                <i class="fa fa-check text-success mr-1" aria-hidden="true"></i>
                                                                <span class="text-muted">{{#str}}result, block_mycourses{{/str}}:</span>
                                                                <strong class="text-success">{{finalscore}}</strong>
                                                            </span>
                                                        </div>
                                                        {{/hasgrade}}
                                                    </div>

                                                    {{! Certificates }}
                                                    {{#certificates.0}}
                                                    <div class="inteb-list-certificates mt-2 pt-2 border-top">
                                                        <div class="d-flex align-items-center flex-wrap">
                                                            <span class="small text-muted mr-2">
                                                                <i class="fa fa-certificate mr-1" aria-hidden="true"></i>
                                                                {{#str}}downloadcert, block_mycourses{{/str}}:
                                                            </span>
                                                            {{#certificates}}
                                                            <a href="{{{certificateurl}}}" class="inteb-cert-link mr-2" title="{{certificatename}}" target="_blank">
                                                                <img src="{{certificateimage}}" alt="{{certificatename}}" class="inteb-cert-icon">
                                                            </a>
                                                            {{/certificates}}
                                                        </div>
                                                    </div>
                                                    {{/certificates.0}}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/completedview.courses}}

                            {{! Empty State }}
                            {{^completedview.courses}}
                            <div class="inteb-empty-state text-center py-5">
                                <div class="inteb-empty-icon mb-3">
                                    <i class="fa fa-trophy fa-4x text-muted"></i>
                                </div>
                                <h5 class="text-muted mb-2">{{#str}}nocompleted, block_mycourses{{/str}}</h5>
                                <p class="text-muted small">{{#str}}nocompleted, block_mycourses{{/str}}</p>
                            </div>
                            {{/completedview.courses}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
