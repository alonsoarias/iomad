    @template block_mycourses/inprogress-card-view

    This template renders the inprogress view for the mycourses block.
    Redesigned for theme_inteb with modern card layout.

    Context variables required for this template:
    * inprogressview - Object containing courses array
    * nocourses - URL for empty state image

    Example context (json):
    {
        "inprogressview": {
            "courses": [
                {
                    "id": 1,
                    "fullname": "Course Name",
                    "shortname": "CN",
                    "courseimage": "url",
                    "viewurl": "url",
                    "coursecategory": "Category",
                    "progress": 50,
                    "hasprogress": true
                }
            ]
        }
    }
}}
<div id="inprogress-view-{{uniqid}}" data-region="inprogress-view" class="inteb-mycourses-view">
    <div class="tab-content">
        <div class="tab-pane active" id="mycourses_inprogress_view">
            <div id="paged-content-container-{{uniqid}}" data-region="paged-content-container">
                <div id="paged-content-page" data-page="1">
                    {{#inprogressview.courses}}
                    {{#inprogressview.courses.0}}
                    <div class="inteb-course-grid row" data-region="card-deck" role="list">
                    {{/inprogressview.courses.0}}
                        {{#inprogressview.courses}}
                        <div class="col-12 col-sm-6 col-lg-4 col-xl-3 mb-4" role="listitem">
                            <div class="inteb-course-card card h-100 shadow-sm" data-region="course-content" data-course-id="{{{id}}}">
                                {{! Course Image }}
                                <div class="inteb-card-img-wrapper position-relative">
                                    <a href="{{viewurl}}" class="d-block" tabindex="-1">
                                        <div class="inteb-card-img" style="background-image: url('{{{courseimage}}}');">
                                            <div class="inteb-card-overlay"></div>
                                        </div>
                                    </a>
                                    {{! Visibility and Favorite Icons }}
                                    <div class="inteb-card-badges position-absolute">
                                        {{> core_course/favouriteicon }}
                                        {{^visible}}
                                        <span class="badge badge-warning" title="{{#str}}hiddenfromstudents{{/str}}">
                                            <i class="fa fa-eye-slash" aria-hidden="true"></i>
                                        </span>
                                        {{/visible}}
                                    </div>
                                    {{! Category Badge }}
                                    {{#coursecategory}}
                                    <div class="inteb-category-badge position-absolute">
                                        <span class="badge badge-primary text-truncate" title="{{{coursecategory}}}">
                                            {{{coursecategory}}}
                                        </span>
                                    </div>
                                    {{/coursecategory}}
                                </div>

                                {{! Card Body }}
                                <div class="card-body d-flex flex-column">
                                    {{! Course Title }}
                                    <h5 class="inteb-course-title mb-2">
                                        <a href="{{viewurl}}" class="text-dark stretched-link" title="{{{fullname}}}">
                                            {{{fullname}}}
                                        </a>
                                    </h5>

                                    {{! Short name if enabled }}
                                    {{#showshortname}}
                                    <p class="text-muted small mb-2">{{{shortname}}}</p>
                                    {{/showshortname}}

                                    {{! Progress Section }}
                                    {{#hasprogress}}
                                    <div class="inteb-progress-wrapper mt-auto">
                                        <div class="d-flex justify-content-between align-items-center mb-1">
                                            <span class="small text-muted">{{#str}}progress, block_mycourses{{/str}}</span>
                                            <span class="small font-weight-bold text-primary">{{progress}}%</span>
                                        </div>
                                        <div class="progress inteb-progress" title="{{progresstooltip}}">
                                            <div class="progress-bar inteb-progress-bar {{#progress}}{{^.}}bg-secondary{{/.}}{{/progress}}"
                                                 role="progressbar"
                                                 style="width: {{progress}}%;"
                                                 aria-valuenow="{{progress}}"
                                                 aria-valuemin="0"
                                                 aria-valuemax="100">
                                            </div>
                                        </div>
                                    </div>
                                    {{/hasprogress}}
                                </div>

                                {{! Card Footer }}
                                <div class="card-footer bg-transparent border-0 pt-0">
                                    <a href="{{viewurl}}" class="btn btn-primary btn-sm btn-block inteb-continue-btn">
                                        <i class="fa fa-play-circle mr-1" aria-hidden="true"></i>
                                        {{#str}}continue, core{{/str}}
                                    </a>
                                </div>
                            </div>
                        </div>
                        {{/inprogressview.courses}}
                    {{#inprogressview.courses.0}}
                    </div>
                    {{/inprogressview.courses.0}}
                    {{/inprogressview.courses}}

                    {{! Empty State }}
                    {{^inprogressview.courses}}
                    <div class="inteb-empty-state text-center py-5">
                        <div class="inteb-empty-icon mb-3">
                            <i class="fa fa-graduation-cap fa-4x text-muted"></i>
                        </div>
                        <h5 class="text-muted mb-2">{{#str}}noinprogress, block_mycourses{{/str}}</h5>
                        <p class="text-muted small">{{#str}}noavailable, block_mycourses{{/str}}</p>
                    </div>
                    {{/inprogressview.courses}}
                </div>
            </div>
        </div>
    </div>
</div>

{{#js}}
require(['jquery', 'core/custom_interaction_events'], function($, customEvents) {
    var root = $('#inprogress-view-{{uniqid}}');
    customEvents.define(root, [customEvents.events.activate]);
    root.on(customEvents.events.activate, '[data-toggle="btns"] > .btn', function() {
        root.find('.btn.active').removeClass('active');
    });
});
{{/js}}
