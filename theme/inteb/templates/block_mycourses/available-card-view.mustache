    @template block_mycourses/available-card-view

    This template renders the available courses view for the mycourses block.
    Redesigned for theme_inteb with modern card layout.

    Context variables required for this template:
    * availableview - Object containing courses array
    * nocourses - URL for empty state image

    Example context (json):
    {
        "availableview": {
            "courses": [
                {
                    "id": 1,
                    "fullname": "Course Name",
                    "shortname": "CN",
                    "courseimage": "url",
                    "viewurl": "url",
                    "coursecategory": "Category"
                }
            ]
        }
    }
}}
<div id="available-view-{{uniqid}}" data-region="available-view" class="inteb-mycourses-view">
    <div class="tab-content">
        <div class="tab-pane active" id="mycourses_available_view">
            <div id="paged-content-container-{{uniqid}}" data-region="paged-content-container">
                <div id="paged-content-page" data-page="1">
                    {{#availableview.courses}}
                    {{#availableview.courses.0}}
                    <div class="inteb-course-grid row" data-region="card-deck" role="list">
                    {{/availableview.courses.0}}
                        {{#availableview.courses}}
                        <div class="col-12 col-sm-6 col-lg-4 col-xl-3 mb-4" role="listitem">
                            <div class="inteb-course-card inteb-available-card card h-100 shadow-sm" data-region="course-content" data-course-id="{{{id}}}">
                                {{! Course Image }}
                                <div class="inteb-card-img-wrapper position-relative">
                                    <a href="{{viewurl}}" class="d-block" tabindex="-1">
                                        <div class="inteb-card-img" style="background-image: url('{{{courseimage}}}');">
                                            <div class="inteb-card-overlay"></div>
                                        </div>
                                    </a>
                                    {{! New Badge for available courses }}
                                    <div class="inteb-new-badge position-absolute">
                                        <span class="badge badge-success">
                                            <i class="fa fa-star mr-1" aria-hidden="true"></i>
                                            {{#str}}new{{/str}}
                                        </span>
                                    </div>
                                    {{! Visibility and Favorite Icons }}
                                    <div class="inteb-card-badges position-absolute">
                                        {{> core_course/favouriteicon }}
                                        {{^visible}}
                                        <span class="badge badge-warning" title="{{#str}}hiddenfromstudents{{/str}}">
                                            <i class="fa fa-eye-slash" aria-hidden="true"></i>
                                        </span>
                                        {{/visible}}
                                    </div>
                                    {{! Category Badge }}
                                    {{#coursecategory}}
                                    <div class="inteb-category-badge position-absolute">
                                        <span class="badge badge-primary text-truncate" title="{{{coursecategory}}}">
                                            {{{coursecategory}}}
                                        </span>
                                    </div>
                                    {{/coursecategory}}
                                </div>

                                {{! Card Body }}
                                <div class="card-body d-flex flex-column">
                                    {{! Course Title }}
                                    <h5 class="inteb-course-title mb-2">
                                        <a href="{{viewurl}}" class="text-dark stretched-link" title="{{{fullname}}}">
                                            {{{fullname}}}
                                        </a>
                                    </h5>

                                    {{! Short name if enabled }}
                                    {{#showshortname}}
                                    <p class="text-muted small mb-2">{{{shortname}}}</p>
                                    {{/showshortname}}

                                    {{! Course Summary }}
                                    {{#summary}}
                                    <p class="inteb-course-summary text-muted small mb-0 mt-auto">
                                        {{{summary}}}
                                    </p>
                                    {{/summary}}

                                    {{! Not Started indicator }}
                                    <div class="inteb-status-indicator mt-auto pt-2">
                                        <span class="badge badge-light border">
                                            <i class="fa fa-clock-o mr-1" aria-hidden="true"></i>
                                            {{#str}}notstarted, block_mycourses{{/str}}
                                        </span>
                                    </div>
                                </div>

                                {{! Card Footer }}
                                <div class="card-footer bg-transparent border-0 pt-0">
                                    <a href="{{viewurl}}" class="btn btn-success btn-sm btn-block inteb-start-btn">
                                        <i class="fa fa-rocket mr-1" aria-hidden="true"></i>
                                        {{#str}}startcourse, block_mycourses{{/str}}
                                    </a>
                                </div>
                            </div>
                        </div>
                        {{/availableview.courses}}
                    {{#availableview.courses.0}}
                    </div>
                    {{/availableview.courses.0}}
                    {{/availableview.courses}}

                    {{! Empty State }}
                    {{^availableview.courses}}
                    <div class="inteb-empty-state text-center py-5">
                        <div class="inteb-empty-icon mb-3">
                            <i class="fa fa-book fa-4x text-muted"></i>
                        </div>
                        <h5 class="text-muted mb-2">{{#str}}noavailable, block_mycourses{{/str}}</h5>
                        <p class="text-muted small">{{#str}}noavailable, block_mycourses{{/str}}</p>
                    </div>
                    {{/availableview.courses}}
                </div>
            </div>
        </div>
    </div>
</div>

{{#js}}
require(['jquery', 'core/custom_interaction_events'], function($, customEvents) {
    var root = $('#available-view-{{uniqid}}');
    customEvents.define(root, [customEvents.events.activate]);
    root.on(customEvents.events.activate, '[data-toggle="btns"] > .btn', function() {
        root.find('.btn.active').removeClass('active');
    });
});
{{/js}}
