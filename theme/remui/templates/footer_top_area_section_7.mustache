{{!
    @template theme_remui/footer_secondary_sections
}}
<div class="section-footer-design-7 footer-top-area-section-7 {{^footerdata.toggle_email_subscribe_settings0}}d-none{{/footerdata.toggle_email_subscribe_settings0}}" >
    <h3 class="section-heading text-center">{{footerdata.top-area-header-text}}</h3>
    <form  method="post" class="subscribe-form d-flex justify-content-center mt-2 email-subscribe-form">
        <div class="subscribe-box {{^footerdata.toggle_email_subscribe_settings0}}d-none{{/footerdata.toggle_email_subscribe_settings0}}">
            <input type="email" name="email" placeholder="Enter Your email" id="emailbox"/>
            <button type="submit" href="{{footerdata.subscribetargetlink0}}" class="btn subscribe-btn">{{#str}}submit,theme_remui{{/str}}</button>
            <i class="edw-icon edw-icon-Email"></i>
        </div>
    </form>
</div>
